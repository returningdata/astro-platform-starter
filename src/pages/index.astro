    <script>
        // Utility function to format timestamps
        function formatTimestamp(timestamp) {
            const date = new Date(timestamp);
            const now = new Date();
            const diffMs = now - date;
            const diffMins = Math.floor(diffMs / 60000);
            const diffHours = Math.floor(diffMs / 3600000);
            const diffDays = Math.floor(diffMs / 86400000);

            if (diffMins < 1) return 'Just now';
            if (diffMins < 60) return `${diffMins}m ago`;
            if (diffHours < 24) return `${diffHours}h ago`;
            if (diffDays < 7) return `${diffDays}d ago`;
            return date.toLocaleDateString();
        }

        // Utility function to parse Discord message content
        function parseContent(content) {
            if (!content) return '';
            // Truncate long content
            if (content.length > 300) {
                return content.substring(0, 300) + '...';
            }
            return content;
        }

        // Load officers on duty count
        async function loadOnDutyCount() {
            try {
                const response = await fetch('/.netlify/functions/discord-on-duty');
                const data = await response.json();

                const countEl = document.getElementById('onDutyCount');
                if (data.success && typeof data.count === 'number') {
                    countEl.textContent = data.count;
                } else {
                    countEl.textContent = '0';
                    countEl.nextElementSibling?.insertAdjacentHTML('afterend',
                        '<div class="text-xs text-yellow-500 mt-1">Configure Discord integration</div>');
                }
            } catch (error) {
                console.error('Failed to load on-duty count:', error);
                document.getElementById('onDutyCount').textContent = '0';
            }
        }

        // Load meeting announcements
        async function loadMeetings() {
            const container = document.getElementById('meetingsContent');
            try {
                const response = await fetch('/.netlify/functions/discord-meetings');
                const data = await response.json();

                if (data.success && data.messages && data.messages.length > 0) {
                    container.innerHTML = data.messages.slice(0, 5).map(msg => `
                        <div class="bg-white/5 rounded-lg p-4 border border-white/10">
                            <div class="flex items-start justify-between mb-2">
                                <span class="font-semibold text-sm text-primary">${msg.author.username}</span>
                                <span class="text-xs text-white/50">${formatTimestamp(msg.timestamp)}</span>
                            </div>
                            <p class="text-white/80 text-sm whitespace-pre-wrap">${parseContent(msg.content)}</p>
                            ${msg.embeds && msg.embeds.length > 0 ? `
                                <div class="mt-2 text-xs text-white/60">+ ${msg.embeds.length} embed(s)</div>
                            ` : ''}
                        </div>
                    `).join('');
                } else {
                    container.innerHTML = `
                        <div class="text-center py-4">
                            <p class="text-white/60 text-sm">${data.error || 'No meeting announcements available'}</p>
                            <p class="text-white/40 text-xs mt-2">Configure DISCORD_BOT_TOKEN to enable live updates</p>
                        </div>
                    `;
                }
            } catch (error) {
                console.error('Failed to load meetings:', error);
                container.innerHTML = `
                    <div class="text-center py-4">
                        <p class="text-white/60 text-sm">Unable to load meeting announcements</p>
                        <p class="text-white/40 text-xs mt-2">Please check Discord integration settings</p>
                    </div>
                `;
            }
        }

        // Load uniforms information
        async function loadUniforms() {
            const container = document.getElementById('uniformsContent');
            try {
                const response = await fetch('/.netlify/functions/discord-uniforms');
                const data = await response.json();

                if (data.success && data.messages && data.messages.length > 0) {
                    container.innerHTML = data.messages.slice(0, 5).map(msg => `
                        <div class="bg-white/5 rounded-lg p-4 border border-white/10">
                            <div class="flex items-start justify-between mb-2">
                                <span class="font-semibold text-sm text-primary">${msg.author.username}</span>
                                <span class="text-xs text-white/50">${formatTimestamp(msg.timestamp)}</span>
                            </div>
                            <p class="text-white/80 text-sm whitespace-pre-wrap">${parseContent(msg.content)}</p>
                            ${msg.attachments && msg.attachments.length > 0 ? `
                                <div class="mt-3 grid grid-cols-2 gap-2">
                                    ${msg.attachments.slice(0, 2).map(att => {
                                        if (att.contentType?.startsWith('image/')) {
                                            return `<img src="${att.url}" alt="${att.filename}" class="rounded border border-white/20 max-h-32 object-cover" />`;
                                        }
                                        return `<a href="${att.url}" target="_blank" class="text-xs text-primary hover:underline">${att.filename}</a>`;
                                    }).join('')}
                                </div>
                            ` : ''}
                        </div>
                    `).join('');
                } else {
                    container.innerHTML = `
                        <div class="text-center py-4">
                            <p class="text-white/60 text-sm">${data.error || 'No uniform information available'}</p>
                            <p class="text-white/40 text-xs mt-2">Configure DISCORD_BOT_TOKEN to enable live updates</p>
                        </div>
                    `;
                }
            } catch (error) {
                console.error('Failed to load uniforms:', error);
                container.innerHTML = `
                    <div class="text-center py-4">
                        <p class="text-white/60 text-sm">Unable to load uniform information</p>
                        <p class="text-white/40 text-xs mt-2">Please check Discord integration settings</p>
                    </div>
                `;
            }
        }

        // Load 10 codes
        async function loadCodes() {
            const container = document.getElementById('codesContent');
            try {
                const response = await fetch('/.netlify/functions/discord-codes');
                const data = await response.json();

                if (data.success && data.messages && data.messages.length > 0) {
                    container.innerHTML = data.messages.slice(0, 5).map(msg => `
                        <div class="bg-white/5 rounded-lg p-4 border border-white/10">
                            <div class="flex items-start justify-between mb-2">
                                <span class="font-semibold text-sm text-primary">${msg.author.username}</span>
                                <span class="text-xs text-white/50">${formatTimestamp(msg.timestamp)}</span>
                            </div>
                            <p class="text-white/80 text-sm whitespace-pre-wrap">${parseContent(msg.content)}</p>
                        </div>
                    `).join('');
                } else {
                    container.innerHTML = `
                        <div class="text-center py-4">
                            <p class="text-white/60 text-sm">${data.error || 'No 10 codes available'}</p>
                            <p class="text-white/40 text-xs mt-2">Configure DISCORD_BOT_TOKEN to enable live updates</p>
                        </div>
                    `;
                }
            } catch (error) {
                console.error('Failed to load codes:', error);
                container.innerHTML = `
                    <div class="text-center py-4">
                        <p class="text-white/60 text-sm">Unable to load 10 codes</p>
                        <p class="text-white/40 text-xs mt-2">Please check Discord integration settings</p>
                    </div>
                `;
            }
        }

        // Load active cases count
        function loadActiveCasesCount() {
            const casesJson = localStorage.getItem('dppd_cases');
            const cases = casesJson ? JSON.parse(casesJson) : [];
            const activeCases = cases.filter(c => c.status === 'open' || c.status === 'in-progress');
            document.getElementById('activeCasesCount').textContent = activeCases.length;
        }

        // Initialize all live data on page load
        document.addEventListener('DOMContentLoaded', () => {
            loadOnDutyCount();
            loadMeetings();
            loadUniforms();
            loadCodes();
            loadActiveCasesCount();

            // Refresh on-duty count every 30 seconds
            setInterval(loadOnDutyCount, 30000);

            // Refresh other content every 60 seconds
            setInterval(() => {
                loadMeetings();
                loadUniforms();
                loadCodes();
            }, 60000);
        });
    </script>
</Layout>
