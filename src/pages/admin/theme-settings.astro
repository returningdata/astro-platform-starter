        <!-- Theme Selection -->
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20">
            <h2 class="text-2xl font-bold mb-6">Select Active Theme</h2>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6" id="theme-cards">
                <!-- Christmas Theme -->
                <div class="theme-card relative rounded-lg overflow-hidden cursor-pointer transition-all hover:scale-105" data-theme="christmas">
                    <div class="absolute inset-0 bg-gradient-to-br from-green-800 to-green-900"></div>
                    <div class="absolute inset-0 flex items-center justify-center text-6xl opacity-30">â„ï¸</div>
