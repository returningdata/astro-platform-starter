---
import { getStore } from '@netlify/blobs';
import { extractUserFromSession } from '../utils/discord-webhook';

export const prerender = false;

interface SiteInfo {
    name: string;
    shortName: string;
    version: string;
    owner: string;
    siteUrl: string;
    color: number;
    maintenanceMode?: boolean;
}

// Get site info
async function getSiteInfo(): Promise<SiteInfo> {
    try {
        const store = getStore({ name: 'site-info', consistency: 'strong' });
        const data = await store.get('settings', { type: 'json' }) as SiteInfo | null;
        if (data) {
            return {
                name: data.name || 'Del Perro Police Department',
                shortName: data.shortName || 'DPPD',
                version: data.version || '1.0.0',
                owner: data.owner || '',
                siteUrl: data.siteUrl || 'https://delperro.netlify.app',
                color: data.color || 0x1e40af,
                maintenanceMode: data.maintenanceMode || false
            };
        }
        return {
            name: 'Del Perro Police Department',
            shortName: 'DPPD',
            version: '1.0.0',
            owner: '',
            siteUrl: 'https://delperro.netlify.app',
            color: 0x1e40af,
            maintenanceMode: false
        };
    } catch (error) {
        console.error('Error fetching site info:', error);
        return {
            name: 'Del Perro Police Department',
            shortName: 'DPPD',
            version: '1.0.0',
            owner: '',
            siteUrl: 'https://delperro.netlify.app',
            color: 0x1e40af,
            maintenanceMode: false
        };
    }
}

const siteInfo = await getSiteInfo();

// Check if user is an admin (logged in via Discord)
let isAdmin = false;
try {
    const user = await extractUserFromSession(Astro.request);
    isAdmin = !!user;
} catch {
    isAdmin = false;
}

// If not in maintenance mode, redirect to home
// If user is admin, also redirect to home (they can access the site)
if (!siteInfo.maintenanceMode || isAdmin) {
    return Astro.redirect('/');
}
---

