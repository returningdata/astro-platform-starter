---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Admin - Resources Management">
    <div class="space-y-8">
        <!-- Header -->
        <div class="flex items-center justify-between flex-wrap gap-4">
            <div>
                <h1 class="text-4xl md:text-5xl font-bold mb-2">Resources Management</h1>
                <p class="text-white/70">Manage department documents and resource links</p>
            </div>
            <div class="flex gap-4">
                <a href="/resources" class="px-4 py-2 bg-slate-700 hover:bg-slate-600 rounded-lg transition-colors">
                    View Resources Page
                </a>
                <button id="saveBtn" class="px-4 py-2 bg-primary hover:bg-primary/80 rounded-lg transition-colors font-semibold">
                    Save Changes
                </button>
            </div>
        </div>

        <!-- Status Messages -->
        <div id="statusMessage" class="hidden rounded-lg p-4 border">
        </div>

        <!-- Add New Resource Button -->
        <button id="addResourceBtn" class="w-full py-4 border-2 border-dashed border-white/30 rounded-lg hover:border-primary hover:bg-white/5 transition-colors text-white/70 hover:text-white">
            + Add New Resource
        </button>

        <!-- Resources List -->
        <div id="resourcesList" class="space-y-6">
            <div class="text-center py-12 text-white/60">
                Loading resources data...
            </div>
        </div>
    </div>

    <script type="module">
        let adminUser = null;

        async function validateSessionAndPermissions() {
            try {
                const response = await fetch('/api/auth/session', {
                    method: 'GET',
                    credentials: 'include'
                });
                const data = await response.json();

                if (!data.authenticated) {
                    window.location.href = '/admin/login';
                    return false;
                }

                adminUser = data.user;

                if (!hasPermission()) {
                    document.body.innerHTML = `
                        <div class="min-h-screen flex items-center justify-center bg-slate-900">
                            <div class="text-center p-8">
                                <h1 class="text-3xl font-bold text-red-400 mb-4">Access Denied</h1>
                                <p class="text-white/70 mb-4">You don't have permission to access this page.</p>
                                <a href="/admin" class="px-6 py-2 bg-primary hover:bg-primary/80 rounded-lg">Return to Dashboard</a>
                            </div>
                        </div>
                    `;
                    return false;
                }

                return true;
            } catch (error) {
                console.error('Session validation error:', error);
                window.location.href = '/admin/login';
                return false;
            }
        }

        function hasPermission() {
            if (!adminUser) return false;
            if (adminUser.role === 'super_admin') return true;
            return adminUser.permissions && adminUser.permissions.includes('resources');
        }

        const iconOptions = ['document', 'spreadsheet', 'link', 'video', 'other'];
        const categoryOptions = ['official', 'training', 'reference', 'subdivision', 'other'];

        const iconSvgs = {
            document: '<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>',
            spreadsheet: '<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" /></svg>',
            link: '<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" /></svg>',
            video: '<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" /></svg>',
            other: '<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" /></svg>'
        };

        const categoryColors = {
            official: 'bg-blue-600',
            training: 'bg-purple-600',
            reference: 'bg-green-600',
            subdivision: 'bg-cyan-600',
            other: 'bg-gray-600'
        };

        let resourcesData = [];

        // Load resources data
        async function loadResources() {
            try {
                const response = await fetch('/api/resources');
                const data = await response.json();
                resourcesData = data.resources || [];
                renderResources();
            } catch (error) {
                console.error('Failed to load resources:', error);
                showStatus('Failed to load resources data', 'error');
            }
        }

        function showStatus(message, type = 'success') {
            const statusEl = document.getElementById('statusMessage');
            statusEl.textContent = message;
            statusEl.className = `rounded-lg p-4 border ${type === 'error' ? 'bg-red-500/20 border-red-500/50 text-red-200' : 'bg-green-500/20 border-green-500/50 text-green-200'}`;
            statusEl.classList.remove('hidden');
            setTimeout(() => statusEl.classList.add('hidden'), 5000);
        }

        function generateId(title) {
            return title.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/(^-|-$)/g, '') + '-' + Date.now();
        }

        function renderResources() {
            const container = document.getElementById('resourcesList');

            if (resourcesData.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-12 text-white/60">
                        No resources found. Add your first resource above.
                    </div>
                `;
                return;
            }

            container.innerHTML = resourcesData.map((resource, index) => `
                <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20" data-resource-index="${index}">
                    <!-- Resource Header -->
                    <div class="flex items-start justify-between gap-4 mb-6">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 ${categoryColors[resource.category] || categoryColors.other} rounded-lg flex items-center justify-center">
                                ${iconSvgs[resource.icon] || iconSvgs.other}
                            </div>
                            <div>
                                <span class="px-2 py-1 rounded-full text-xs font-semibold uppercase bg-white/10 text-white/70 border border-white/20">
                                    ${resource.category}
                                </span>
                            </div>
                        </div>
                        <button class="delete-resource text-red-400 hover:text-red-300 text-sm" data-resource-index="${index}">
                            Delete Resource
                        </button>
                    </div>

                    <!-- Resource Form -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="md:col-span-2">
                            <label class="block text-sm font-medium text-slate-300 mb-1">Title</label>
                            <input type="text" value="${resource.title}" class="resource-title w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:ring-2 focus:ring-primary focus:border-transparent" data-resource-index="${index}">
                        </div>
                        <div class="md:col-span-2">
                            <label class="block text-sm font-medium text-slate-300 mb-1">URL</label>
                            <input type="url" value="${resource.url}" class="resource-url w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:ring-2 focus:ring-primary focus:border-transparent" data-resource-index="${index}" placeholder="https://...">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-300 mb-1">Icon Type</label>
                            <select class="resource-icon w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:ring-2 focus:ring-primary focus:border-transparent" data-resource-index="${index}">
                                ${iconOptions.map(icon => `<option value="${icon}" ${resource.icon === icon ? 'selected' : ''}>${icon}</option>`).join('')}
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-300 mb-1">Category</label>
                            <select class="resource-category w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:ring-2 focus:ring-primary focus:border-transparent" data-resource-index="${index}">
                                ${categoryOptions.map(cat => `<option value="${cat}" ${resource.category === cat ? 'selected' : ''}>${cat}</option>`).join('')}
                            </select>
                        </div>
                        <div class="md:col-span-2">
                            <label class="block text-sm font-medium text-slate-300 mb-1">Description</label>
                            <textarea class="resource-description w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:ring-2 focus:ring-primary focus:border-transparent h-24 resize-none" data-resource-index="${index}">${resource.description}</textarea>
                        </div>
                    </div>

                    <!-- Preview Link -->
                    <div class="mt-4 pt-4 border-t border-white/10">
                        <a href="${resource.url}" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 text-primary hover:text-primary/80 text-sm">
                            <span>Open resource in new tab</span>
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                            </svg>
                        </a>
                    </div>
                </div>
            `).join('');

            attachEventListeners();
        }

        function attachEventListeners() {
            // Resource title changes
            document.querySelectorAll('.resource-title').forEach(input => {
                input.addEventListener('change', (e) => {
                    const index = parseInt(e.target.dataset.resourceIndex);
                    resourcesData[index].title = e.target.value;
                });
            });

            // Resource URL changes
            document.querySelectorAll('.resource-url').forEach(input => {
                input.addEventListener('change', (e) => {
                    const index = parseInt(e.target.dataset.resourceIndex);
                    resourcesData[index].url = e.target.value;
                    renderResources();
                });
            });

            // Resource icon changes
            document.querySelectorAll('.resource-icon').forEach(select => {
                select.addEventListener('change', (e) => {
                    const index = parseInt(e.target.dataset.resourceIndex);
                    resourcesData[index].icon = e.target.value;
                    renderResources();
                });
            });

            // Resource category changes
            document.querySelectorAll('.resource-category').forEach(select => {
                select.addEventListener('change', (e) => {
                    const index = parseInt(e.target.dataset.resourceIndex);
                    resourcesData[index].category = e.target.value;
                    renderResources();
                });
            });

            // Resource description changes
            document.querySelectorAll('.resource-description').forEach(textarea => {
                textarea.addEventListener('change', (e) => {
                    const index = parseInt(e.target.dataset.resourceIndex);
                    resourcesData[index].description = e.target.value;
                });
            });

            // Delete resource
            document.querySelectorAll('.delete-resource').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const index = parseInt(e.target.dataset.resourceIndex);
                    if (confirm('Are you sure you want to delete this resource?')) {
                        resourcesData.splice(index, 1);
                        renderResources();
                    }
                });
            });
        }

        // Add new resource
        document.getElementById('addResourceBtn').addEventListener('click', () => {
            const newResource = {
                id: generateId('new-resource'),
                title: 'New Resource',
                description: 'Resource description...',
                url: 'https://',
                icon: 'document',
                category: 'official'
            };
            resourcesData.push(newResource);
            renderResources();
        });

        // Save changes
        document.getElementById('saveBtn').addEventListener('click', async () => {
            const saveBtn = document.getElementById('saveBtn');
            saveBtn.disabled = true;
            saveBtn.textContent = 'Saving...';

            try {
                const response = await fetch('/api/resources', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    credentials: 'include',
                    body: JSON.stringify({ resources: resourcesData })
                });

                const result = await response.json();

                if (result.success) {
                    showStatus('Changes saved successfully!', 'success');
                } else {
                    showStatus(result.error || 'Failed to save changes', 'error');
                }
            } catch (error) {
                console.error('Save error:', error);
                showStatus('Failed to save changes', 'error');
            } finally {
                saveBtn.disabled = false;
                saveBtn.textContent = 'Save Changes';
            }
        });

        // Initialize
        validateSessionAndPermissions().then(valid => {
            if (valid) {
                loadResources();
            }
        });
    </script>
</Layout>
