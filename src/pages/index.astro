        // Load leadership sidebar data
        async function loadLeadershipSidebar() {
            try {
                const response = await fetch('/api/department-data');
                if (!response.ok) return;

                const data = await response.json();
                const commandPositions = data.commandPositions || [];
                const subdivisionLeadership = data.subdivisionLeadership || [];

                // Get Department Liaisons (non-vacant)
                const liaisons = subdivisionLeadership.filter(l =>
                    l.positionType === 'department_liaison' && l.name && l.name.trim() !== ''
                );

                // Get Chief of Police (if not vacant)
                const chief = commandPositions.find(p => p.rank === 'Chief of Police' && p.name && p.name.trim() !== '');

                // Get High Command (excluding Chief, excluding vacant)
                // High Command ranks: Deputy Chief of Police, Assistant Chief of Police, Colonel, Lieutenant Colonel
                const highCommandRanks = ['Deputy Chief of Police', 'Assistant Chief of Police', 'Colonel', 'Lieutenant Colonel'];
                const highCommand = commandPositions.filter(p =>
                    highCommandRanks.includes(p.rank) && p.name && p.name.trim() !== ''
                );

                // Populate Department Liaisons section
                const liaisonsSection = document.getElementById('liaisonsSection');
                const liaisonsList = document.getElementById('liaisonsList');
                if (liaisons.length > 0 && liaisonsSection && liaisonsList) {
                    liaisonsSection.classList.remove('hidden');
                    liaisonsList.innerHTML = liaisons.map(l => `
