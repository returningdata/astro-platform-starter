---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Admin - Subdivisions Management">
    <div class="space-y-8">
        <!-- Header -->
        <div class="flex items-center justify-between flex-wrap gap-4">
            <div>
                <h1 class="text-4xl md:text-5xl font-bold mb-2">Subdivisions</h1>
                <p class="text-white/70">Manage department subdivisions and their availability</p>
            </div>
            <div class="flex gap-4">
                <a href="/admin" class="px-4 py-2 bg-slate-700 hover:bg-slate-600 rounded-lg transition-colors">
                    Back to Dashboard
                </a>
                <button id="saveBtn" class="px-4 py-2 bg-primary hover:bg-primary/80 rounded-lg transition-colors font-semibold">
                    Save Changes
                </button>
            </div>
        </div>

        <!-- Status Messages -->
        <div id="statusMessage" class="hidden rounded-lg p-4 border">
        </div>

        <!-- Availability Legend -->
        <div class="bg-white/5 rounded-lg p-4 border border-white/10">
            <h3 class="text-sm font-semibold text-white/80 mb-3">Availability Status Legend</h3>
            <div class="flex flex-wrap gap-4">
                <div class="flex items-center gap-2">
                    <span class="inline-block w-3 h-3 bg-green-500 rounded-full"></span>
                    <span class="text-sm text-white/70">Open Applications</span>
                </div>
                <div class="flex items-center gap-2">
                    <span class="inline-block w-3 h-3 bg-yellow-500 rounded-full"></span>
                    <span class="text-sm text-white/70">Tryouts</span>
                </div>
                <div class="flex items-center gap-2">
                    <span class="inline-block w-3 h-3 bg-purple-500 rounded-full"></span>
                    <span class="text-sm text-white/70">Handpicked</span>
                </div>
                <div class="flex items-center gap-2">
                    <span class="inline-block w-3 h-3 bg-red-500 rounded-full"></span>
                    <span class="text-sm text-white/70">Closed</span>
                </div>
            </div>
        </div>

        <!-- Add New Subdivision Button -->
        <button id="addSubdivisionBtn" class="w-full py-4 border-2 border-dashed border-white/30 rounded-lg hover:border-primary hover:bg-primary/10 transition-all text-white/70 hover:text-white">
            + Add New Subdivision
        </button>

        <!-- Subdivisions List -->
        <div id="subdivisionsList" class="space-y-4">
            <div class="text-center py-8 text-white/60">
                Loading subdivisions...
            </div>
        </div>
    </div>

    <script type="module">
        // Check permissions
        const adminUserData = sessionStorage.getItem('adminUser');
        if (!adminUserData) {
            window.location.href = '/admin/login';
        }
        const adminUser = adminUserData ? JSON.parse(adminUserData) : null;

        // Check if user has permission for subdivisions
        function hasPermission() {
            if (!adminUser) return false;
            if (adminUser.role === 'super_admin') return true;
            if (adminUser.role === 'subdivision_overseer') return true;
            return adminUser.permissions && adminUser.permissions.includes('subdivisions');
        }

        if (!hasPermission()) {
            document.body.innerHTML = `
                <div class="min-h-screen flex items-center justify-center bg-slate-900">
                    <div class="text-center p-8">
                        <h1 class="text-3xl font-bold text-red-400 mb-4">Access Denied</h1>
                        <p class="text-white/70 mb-4">You don't have permission to access this page.</p>
                        <a href="/admin" class="px-6 py-2 bg-primary hover:bg-primary/80 rounded-lg">Return to Dashboard</a>
                    </div>
                </div>
            `;
        }

        let subdivisionsData = [];

        // Load subdivisions data
        async function loadSubdivisions() {
            try {
                const response = await fetch('/api/subdivisions');
                const data = await response.json();
                subdivisionsData = data.subdivisions || [];
                renderSubdivisions();
            } catch (error) {
                console.error('Failed to load subdivisions:', error);
                showStatus('Failed to load subdivisions', 'error');
            }
        }

        function showStatus(message, type = 'success') {
            const statusEl = document.getElementById('statusMessage');
            statusEl.textContent = message;
            statusEl.className = `rounded-lg p-4 border ${type === 'error' ? 'bg-red-500/20 border-red-500/50 text-red-200' : 'bg-green-500/20 border-green-500/50 text-green-200'}`;
            statusEl.classList.remove('hidden');
            setTimeout(() => statusEl.classList.add('hidden'), 5000);
        }

        function getAvailabilityColor(availability) {
            switch (availability) {
                case 'open': return 'bg-green-500';
                case 'tryouts': return 'bg-yellow-500';
                case 'handpicked': return 'bg-purple-500';
                case 'closed': return 'bg-red-500';
                default: return 'bg-gray-500';
            }
        }

        function getAvailabilityLabel(availability) {
            switch (availability) {
                case 'open': return 'Open Applications';
                case 'tryouts': return 'Tryouts';
                case 'handpicked': return 'Handpicked';
                case 'closed': return 'Closed';
                default: return 'Unknown';
            }
        }

        function renderSubdivisions() {
            const container = document.getElementById('subdivisionsList');

            if (subdivisionsData.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-8 text-white/60">
                        No subdivisions found. Click "Add New Subdivision" to create one.
                    </div>
                `;
                return;
            }

            container.innerHTML = subdivisionsData.map((subdivision, index) => `
                <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20" data-index="${index}">
                    <div class="flex items-start justify-between gap-4 mb-4">
                        <div class="flex items-center gap-3">
                            <span class="inline-block w-3 h-3 ${getAvailabilityColor(subdivision.availability)} rounded-full"></span>
                            <span class="text-sm font-medium text-white/60">${getAvailabilityLabel(subdivision.availability)}</span>
                        </div>
                        <button class="delete-btn text-red-400 hover:text-red-300 hover:bg-red-500/20 px-3 py-1 rounded transition-colors" data-index="${index}">
                            Delete
                        </button>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                        <div>
                            <label class="block text-sm font-medium text-slate-300 mb-1">Subdivision ID</label>
                            <input
                                type="text"
                                value="${subdivision.id || ''}"
                                placeholder="e.g., swat"
                                class="subdivision-id w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-cyan-300 font-mono focus:ring-2 focus:ring-primary focus:border-transparent"
                                data-index="${index}"
                            >
                            <p class="text-xs text-white/50 mt-1">Used to link leadership entries</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-300 mb-1">Abbreviation</label>
                            <input
                                type="text"
                                value="${subdivision.abbreviation || ''}"
                                placeholder="e.g., SWAT"
                                class="subdivision-abbreviation w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white font-bold focus:ring-2 focus:ring-primary focus:border-transparent"
                                data-index="${index}"
                            >
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-300 mb-1">Full Name</label>
                            <input
                                type="text"
                                value="${subdivision.name || ''}"
                                placeholder="e.g., Special Weapons & Tactics"
                                class="subdivision-name w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:ring-2 focus:ring-primary focus:border-transparent"
                                data-index="${index}"
                            >
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-slate-300 mb-1">Description</label>
                            <input
                                type="text"
                                value="${subdivision.description || ''}"
                                placeholder="Brief description..."
                                class="subdivision-description w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:ring-2 focus:ring-primary focus:border-transparent"
                                data-index="${index}"
                            >
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-300 mb-1">Availability</label>
                            <select
                                class="subdivision-availability w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:ring-2 focus:ring-primary focus:border-transparent"
                                data-index="${index}"
                            >
                                <option value="open" ${subdivision.availability === 'open' ? 'selected' : ''}>Open Applications</option>
                                <option value="tryouts" ${subdivision.availability === 'tryouts' ? 'selected' : ''}>Tryouts</option>
                                <option value="handpicked" ${subdivision.availability === 'handpicked' ? 'selected' : ''}>Handpicked</option>
                                <option value="closed" ${subdivision.availability === 'closed' ? 'selected' : ''}>Closed</option>
                            </select>
                        </div>
                    </div>
                </div>
            `).join('');

            attachEventListeners();
        }

        function attachEventListeners() {
            // Subdivision ID inputs
            document.querySelectorAll('.subdivision-id').forEach(input => {
                input.addEventListener('input', (e) => {
                    const index = parseInt(e.target.dataset.index);
                    subdivisionsData[index].id = e.target.value.toLowerCase().replace(/\s+/g, '-');
                });
            });

            // Abbreviation inputs
            document.querySelectorAll('.subdivision-abbreviation').forEach(input => {
                input.addEventListener('input', (e) => {
                    const index = parseInt(e.target.dataset.index);
                    subdivisionsData[index].abbreviation = e.target.value;
                });
            });

            // Name inputs
            document.querySelectorAll('.subdivision-name').forEach(input => {
                input.addEventListener('input', (e) => {
                    const index = parseInt(e.target.dataset.index);
                    subdivisionsData[index].name = e.target.value;
                });
            });

            // Description inputs
            document.querySelectorAll('.subdivision-description').forEach(input => {
                input.addEventListener('input', (e) => {
                    const index = parseInt(e.target.dataset.index);
                    subdivisionsData[index].description = e.target.value;
                });
            });

            // Availability selects
            document.querySelectorAll('.subdivision-availability').forEach(select => {
                select.addEventListener('change', (e) => {
                    const index = parseInt(e.target.dataset.index);
                    subdivisionsData[index].availability = e.target.value;
                    renderSubdivisions(); // Re-render to update the status indicator
                });
            });

            // Delete buttons
            document.querySelectorAll('.delete-btn').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const index = parseInt(e.target.dataset.index);
                    if (confirm('Are you sure you want to delete this subdivision?')) {
                        subdivisionsData.splice(index, 1);
                        renderSubdivisions();
                    }
                });
            });
        }

        // Add new subdivision
        document.getElementById('addSubdivisionBtn').addEventListener('click', () => {
            const newSubdivision = {
                id: `subdivision-${Date.now()}`,
                name: '',
                abbreviation: '',
                description: '',
                availability: 'closed'
            };
            subdivisionsData.push(newSubdivision);
            renderSubdivisions();

            // Scroll to the new item
            setTimeout(() => {
                const container = document.getElementById('subdivisionsList');
                const lastItem = container.lastElementChild;
                if (lastItem) {
                    lastItem.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    lastItem.querySelector('input')?.focus();
                }
            }, 100);
        });

        // Save changes
        document.getElementById('saveBtn').addEventListener('click', async () => {
            const saveBtn = document.getElementById('saveBtn');
            saveBtn.disabled = true;
            saveBtn.textContent = 'Saving...';

            try {
                const response = await fetch('/api/subdivisions', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ subdivisions: subdivisionsData })
                });

                const result = await response.json();

                if (result.success) {
                    showStatus('Subdivisions saved successfully!', 'success');
                } else {
                    showStatus(result.error || 'Failed to save subdivisions', 'error');
                }
            } catch (error) {
                console.error('Save error:', error);
                showStatus('Failed to save subdivisions', 'error');
            } finally {
                saveBtn.disabled = false;
                saveBtn.textContent = 'Save Changes';
            }
        });

        // Initialize
        loadSubdivisions();
    </script>
</Layout>
