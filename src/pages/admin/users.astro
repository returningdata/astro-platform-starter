---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Admin - User Management">
    <div class="space-y-8">
        <!-- Header -->
        <div class="flex items-center justify-between flex-wrap gap-4">
            <div>
                <h1 class="text-4xl md:text-5xl font-bold mb-2">User Management</h1>
                <p class="text-white/70">Create and manage admin accounts with custom permissions</p>
            </div>
            <div class="flex gap-4">
                <a href="/admin" class="px-4 py-2 bg-slate-700 hover:bg-slate-600 rounded-lg transition-colors">
                    Back to Dashboard
                </a>
                <button id="addUserBtn" class="px-4 py-2 bg-primary hover:bg-primary/80 rounded-lg transition-colors font-semibold">
                    + Add User
                </button>
            </div>
        </div>

        <!-- Status Messages -->
        <div id="statusMessage" class="hidden rounded-lg p-4 border">
        </div>

        <!-- Access Denied Message (shown if not super admin) -->
        <div id="accessDenied" class="hidden bg-red-500/20 border border-red-500/50 rounded-lg p-8 text-center">
            <svg class="w-16 h-16 mx-auto text-red-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <h2 class="text-2xl font-bold text-red-400 mb-2">Access Denied</h2>
            <p class="text-white/70">Only Super Admins can manage user accounts.</p>
            <a href="/admin" class="inline-block mt-4 px-6 py-2 bg-slate-700 hover:bg-slate-600 rounded-lg transition-colors">
                Return to Dashboard
            </a>
        </div>

        <!-- Users List -->
        <div id="usersContainer" class="space-y-6">
            <div class="text-center py-12 text-white/60">
                Loading users...
            </div>
        </div>

        <!-- Add/Edit User Modal -->
        <div id="userModal" class="fixed inset-0 bg-black/70 backdrop-blur-sm hidden z-50 flex items-center justify-center p-4">
            <div class="bg-slate-800 rounded-lg border border-slate-700 w-full max-w-2xl max-h-[90vh] overflow-y-auto">
                <div class="p-6 border-b border-slate-700">
                    <h2 id="modalTitle" class="text-2xl font-bold">Add New User</h2>
                </div>
                <form id="userForm" class="p-6 space-y-6">
                    <input type="hidden" id="userId" value="">

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-slate-300 mb-1">Username *</label>
                            <input
                                type="text"
                                id="username"
                                required
                                class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:ring-2 focus:ring-primary focus:border-transparent"
                                placeholder="e.g., DPPD_OFFICER"
                            >
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-300 mb-1">Display Name *</label>
                            <input
                                type="text"
                                id="displayName"
                                required
                                class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:ring-2 focus:ring-primary focus:border-transparent"
                                placeholder="e.g., Officer Name"
                            >
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-slate-300 mb-1">
                                Password <span id="passwordRequired">*</span>
                            </label>
                            <input
                                type="password"
                                id="password"
                                class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:ring-2 focus:ring-primary focus:border-transparent"
                                placeholder="Enter password"
                            >
                            <p id="passwordHint" class="text-xs text-white/50 mt-1 hidden">Leave blank to keep current password</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-300 mb-1">Role *</label>
                            <select
                                id="role"
                                required
                                class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:ring-2 focus:ring-primary focus:border-transparent"
                            >
                                <option value="super_admin">Super Admin (Full Access)</option>
                                <option value="subdivision_overseer">Subdivision Overseer</option>
                                <option value="custom">Custom Permissions</option>
                            </select>
                        </div>
                    </div>

                    <!-- Permissions Section -->
                    <div id="permissionsSection" class="hidden">
                        <label class="block text-sm font-medium text-slate-300 mb-3">Custom Permissions</label>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                            <label class="flex items-center gap-3 p-3 bg-slate-700/30 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors">
                                <input type="checkbox" name="permissions" value="warehouse" class="permission-checkbox w-5 h-5 rounded border-slate-500 text-primary focus:ring-primary">
                                <span>Warehouse</span>
                            </label>
                            <label class="flex items-center gap-3 p-3 bg-slate-700/30 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors">
                                <input type="checkbox" name="permissions" value="events" class="permission-checkbox w-5 h-5 rounded border-slate-500 text-primary focus:ring-primary">
                                <span>Events</span>
                            </label>
                            <label class="flex items-center gap-3 p-3 bg-slate-700/30 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors">
                                <input type="checkbox" name="permissions" value="resources" class="permission-checkbox w-5 h-5 rounded border-slate-500 text-primary focus:ring-primary">
                                <span>Resources</span>
                            </label>
                            <label class="flex items-center gap-3 p-3 bg-slate-700/30 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors">
                                <input type="checkbox" name="permissions" value="uniforms" class="permission-checkbox w-5 h-5 rounded border-slate-500 text-primary focus:ring-primary">
                                <span>Uniforms</span>
                            </label>
                            <label class="flex items-center gap-3 p-3 bg-slate-700/30 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors">
                                <input type="checkbox" name="permissions" value="theme-settings" class="permission-checkbox w-5 h-5 rounded border-slate-500 text-primary focus:ring-primary">
                                <span>Theme Settings</span>
                            </label>
                            <label class="flex items-center gap-3 p-3 bg-slate-700/30 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors">
                                <input type="checkbox" name="permissions" value="department-data" class="permission-checkbox w-5 h-5 rounded border-slate-500 text-primary focus:ring-primary">
                                <span>Department Data (Full)</span>
                            </label>
                            <label class="flex items-center gap-3 p-3 bg-slate-700/30 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors">
                                <input type="checkbox" name="permissions" value="department-data-subdivisions" class="permission-checkbox w-5 h-5 rounded border-slate-500 text-primary focus:ring-primary">
                                <span>Department Data (Subdivisions Only)</span>
                            </label>
                            <label class="flex items-center gap-3 p-3 bg-slate-700/30 rounded-lg cursor-pointer hover:bg-slate-700/50 transition-colors">
                                <input type="checkbox" name="permissions" value="subdivisions" class="permission-checkbox w-5 h-5 rounded border-slate-500 text-primary focus:ring-primary">
                                <span>Subdivisions</span>
                            </label>
                        </div>
                    </div>

                    <!-- Role Descriptions -->
                    <div id="roleDescription" class="p-4 bg-slate-700/30 rounded-lg">
                        <p class="text-sm text-white/70" id="roleDescText">Super Admin has full access to all admin features including user management.</p>
                    </div>

                    <div class="flex gap-4 justify-end pt-4 border-t border-slate-700">
                        <button type="button" id="cancelBtn" class="px-6 py-2 bg-slate-600 hover:bg-slate-500 rounded-lg transition-colors">
                            Cancel
                        </button>
                        <button type="submit" class="px-6 py-2 bg-primary hover:bg-primary/80 rounded-lg transition-colors font-semibold">
                            Save User
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script type="module">
        // Check permissions
        const adminUserData = sessionStorage.getItem('adminUser');
        if (!adminUserData) {
            window.location.href = '/admin/login';
        }

        const currentUser = adminUserData ? JSON.parse(adminUserData) : null;

        // Only super_admin can access user management
        if (!currentUser || currentUser.role !== 'super_admin') {
            document.getElementById('usersContainer').classList.add('hidden');
            document.getElementById('accessDenied').classList.remove('hidden');
            document.querySelector('.flex.gap-4').classList.add('hidden');
        } else {
            loadUsers();
        }

        let usersData = [];

        const roleDescriptions = {
            'super_admin': 'Super Admin has full access to all admin features including user management.',
            'subdivision_overseer': 'Subdivision Overseer can only access Subdivision Leadership in Department Data and the Subdivisions page.',
            'custom': 'Custom role allows you to select specific permissions for this user.'
        };

        async function loadUsers() {
            try {
                const response = await fetch('/api/users', {
                    headers: {
                        'Authorization': `Bearer ${currentUser.id}`
                    }
                });
                const data = await response.json();
                usersData = data.users || [];
                renderUsers();
            } catch (error) {
                console.error('Failed to load users:', error);
                showStatus('Failed to load users', 'error');
            }
        }

        function showStatus(message, type = 'success') {
            const statusEl = document.getElementById('statusMessage');
            statusEl.textContent = message;
            statusEl.className = `rounded-lg p-4 border ${type === 'error' ? 'bg-red-500/20 border-red-500/50 text-red-200' : 'bg-green-500/20 border-green-500/50 text-green-200'}`;
            statusEl.classList.remove('hidden');
            setTimeout(() => statusEl.classList.add('hidden'), 5000);
        }

        function renderUsers() {
            const container = document.getElementById('usersContainer');

            if (usersData.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-12 text-white/60">
                        No users found. Click "Add User" to create one.
                    </div>
                `;
                return;
            }

            container.innerHTML = usersData.map(user => {
                const isDefaultAdmin = user.id === 'admin-default';
                const roleLabel = user.role === 'super_admin' ? 'Super Admin' :
                                  user.role === 'subdivision_overseer' ? 'Subdivision Overseer' : 'Custom';
                const roleColor = user.role === 'super_admin' ? 'bg-red-500/20 text-red-300 border-red-500/30' :
                                  user.role === 'subdivision_overseer' ? 'bg-orange-500/20 text-orange-300 border-orange-500/30' :
                                  'bg-blue-500/20 text-blue-300 border-blue-500/30';

                return `
                    <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20">
                        <div class="flex items-start justify-between gap-4 flex-wrap">
                            <div class="flex items-center gap-4">
                                <div class="w-14 h-14 bg-slate-700 rounded-full flex items-center justify-center">
                                    <svg class="w-8 h-8 text-white/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="text-xl font-bold">${user.displayName}</h3>
                                    <p class="text-white/60 font-mono text-sm">${user.username}</p>
                                </div>
                            </div>
                            <div class="flex items-center gap-3">
                                <span class="px-3 py-1 rounded-full text-xs font-semibold border ${roleColor}">
                                    ${roleLabel}
                                </span>
                                <button class="edit-user-btn px-4 py-2 bg-slate-700 hover:bg-slate-600 rounded-lg transition-colors text-sm" data-user-id="${user.id}">
                                    Edit
                                </button>
                                ${!isDefaultAdmin ? `
                                    <button class="delete-user-btn px-4 py-2 bg-red-500/20 hover:bg-red-500/40 border border-red-500/50 rounded-lg transition-colors text-red-400 text-sm" data-user-id="${user.id}">
                                        Delete
                                    </button>
                                ` : `
                                    <span class="px-4 py-2 bg-slate-700/50 rounded-lg text-white/50 text-sm cursor-not-allowed" title="Primary admin cannot be deleted">
                                        Protected
                                    </span>
                                `}
                            </div>
                        </div>
                        ${user.role === 'custom' && user.permissions && user.permissions.length > 0 ? `
                            <div class="mt-4 pt-4 border-t border-white/10">
                                <p class="text-sm text-white/60 mb-2">Permissions:</p>
                                <div class="flex flex-wrap gap-2">
                                    ${user.permissions.map(p => `
                                        <span class="px-2 py-1 bg-slate-700/50 rounded text-xs text-white/80">${p}</span>
                                    `).join('')}
                                </div>
                            </div>
                        ` : ''}
                        <div class="mt-4 pt-4 border-t border-white/10 text-xs text-white/40">
                            Created: ${new Date(user.createdAt).toLocaleDateString()} |
                            Updated: ${new Date(user.updatedAt).toLocaleDateString()}
                        </div>
                    </div>
                `;
            }).join('');

            attachEventListeners();
        }

        function attachEventListeners() {
            document.querySelectorAll('.edit-user-btn').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const userId = e.target.dataset.userId;
                    const user = usersData.find(u => u.id === userId);
                    if (user) openModal(user);
                });
            });

            document.querySelectorAll('.delete-user-btn').forEach(btn => {
                btn.addEventListener('click', async (e) => {
                    const userId = e.target.dataset.userId;
                    const user = usersData.find(u => u.id === userId);
                    if (user && confirm(`Are you sure you want to delete user "${user.displayName}"?`)) {
                        await deleteUser(userId);
                    }
                });
            });
        }

        async function deleteUser(userId) {
            try {
                const response = await fetch('/api/users', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${currentUser.id}`
                    },
                    body: JSON.stringify({
                        action: 'delete',
                        userId
                    })
                });

                const result = await response.json();
                if (result.success) {
                    showStatus('User deleted successfully');
                    loadUsers();
                } else {
                    showStatus(result.error || 'Failed to delete user', 'error');
                }
            } catch (error) {
                showStatus('Failed to delete user', 'error');
            }
        }

        function openModal(user = null) {
            const modal = document.getElementById('userModal');
            const title = document.getElementById('modalTitle');
            const form = document.getElementById('userForm');
            const passwordHint = document.getElementById('passwordHint');
            const passwordRequired = document.getElementById('passwordRequired');
            const passwordInput = document.getElementById('password');

            if (user) {
                title.textContent = 'Edit User';
                document.getElementById('userId').value = user.id;
                document.getElementById('username').value = user.username;
                document.getElementById('displayName').value = user.displayName;
                document.getElementById('role').value = user.role;
                passwordInput.required = false;
                passwordRequired.textContent = '';
                passwordHint.classList.remove('hidden');

                // Set permissions checkboxes
                document.querySelectorAll('.permission-checkbox').forEach(cb => {
                    cb.checked = user.permissions && user.permissions.includes(cb.value);
                });
            } else {
                title.textContent = 'Add New User';
                form.reset();
                document.getElementById('userId').value = '';
                passwordInput.required = true;
                passwordRequired.textContent = '*';
                passwordHint.classList.add('hidden');
            }

            updateRoleUI();
            modal.classList.remove('hidden');
        }

        function closeModal() {
            document.getElementById('userModal').classList.add('hidden');
        }

        function updateRoleUI() {
            const role = document.getElementById('role').value;
            const permissionsSection = document.getElementById('permissionsSection');
            const roleDescText = document.getElementById('roleDescText');

            roleDescText.textContent = roleDescriptions[role];

            if (role === 'custom') {
                permissionsSection.classList.remove('hidden');
            } else {
                permissionsSection.classList.add('hidden');
            }
        }

        // Event Listeners
        document.getElementById('addUserBtn').addEventListener('click', () => openModal());
        document.getElementById('cancelBtn').addEventListener('click', closeModal);
        document.getElementById('role').addEventListener('change', updateRoleUI);

        document.getElementById('userModal').addEventListener('click', (e) => {
            if (e.target.id === 'userModal') closeModal();
        });

        document.getElementById('userForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const userId = document.getElementById('userId').value;
            const username = document.getElementById('username').value;
            const displayName = document.getElementById('displayName').value;
            const password = document.getElementById('password').value;
            const role = document.getElementById('role').value;

            let permissions = [];
            if (role === 'custom') {
                document.querySelectorAll('.permission-checkbox:checked').forEach(cb => {
                    permissions.push(cb.value);
                });
            } else if (role === 'subdivision_overseer') {
                permissions = ['department-data-subdivisions', 'subdivisions'];
            } else if (role === 'super_admin') {
                permissions = ['warehouse', 'events', 'resources', 'uniforms', 'theme-settings', 'department-data', 'subdivisions', 'user-management'];
            }

            const userData = {
                username,
                displayName,
                role,
                permissions
            };

            if (password) {
                userData.password = password;
            }

            try {
                const response = await fetch('/api/users', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${currentUser.id}`
                    },
                    body: JSON.stringify({
                        action: userId ? 'update' : 'create',
                        user: userData,
                        userId: userId || undefined
                    })
                });

                const result = await response.json();

                if (result.success) {
                    showStatus(userId ? 'User updated successfully' : 'User created successfully');
                    closeModal();
                    loadUsers();
                } else {
                    showStatus(result.error || 'Failed to save user', 'error');
                }
            } catch (error) {
                showStatus('Failed to save user', 'error');
            }
        });
    </script>
</Layout>
