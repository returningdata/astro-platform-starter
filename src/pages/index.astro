---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Del Perro Police Department - Officer Hub">
    <div class="space-y-12 relative">
        <!-- Background Image -->
        <div class="fixed inset-0 -z-10">
            <img src="/images/buff.png" alt="" class="w-full h-full object-cover opacity-20">
            <div class="absolute inset-0 bg-gradient-to-b from-complementary/80 via-complementary/90 to-complementary"></div>
        </div>

        <!-- Hero Section -->
        <div class="text-center space-y-4">
            <h1 class="mb-6 text-5xl md:text-6xl">Del Perro Police Department</h1>
            <p class="text-xl text-white/80 max-w-3xl mx-auto">
                Officer Resources and Information Hub
            </p>
            <div class="flex items-center justify-center gap-2 text-sm text-white/60">
                <span class="inline-block w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
                <span>System Operational</span>
            </div>
        </div>

        <!-- Quick Access Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-12">
            <!-- Resources -->
            <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 hover:bg-white/15 transition-all border border-white/20">
                <div class="flex items-center gap-3 mb-4">
                    <div class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                        </svg>
                    </div>
                    <h2 class="text-2xl font-bold">Resources</h2>
                </div>
                <p class="text-white/70 mb-4">
                    Department protocols, training materials, and policy documents
                </p>
                <a href="/resources" class="text-primary hover:underline font-semibold">
                    Browse Resources →
                </a>
            </div>

            <!-- Personnel -->
            <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 hover:bg-white/15 transition-all border border-white/20">
                <div class="flex items-center gap-3 mb-4">
                    <div class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                    </div>
                    <h2 class="text-2xl font-bold">Personnel</h2>
                </div>
                <p class="text-white/70 mb-4">
                    Officer directory, contact information, and department roster
                </p>
                <a href="/chain-of-command" class="text-primary hover:underline font-semibold">
                    View Personnel →
                </a>
            </div>

            <!-- Equipment -->
            <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 hover:bg-white/15 transition-all border border-white/20">
                <div class="flex items-center gap-3 mb-4">
                    <div class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                        </svg>
                    </div>
                    <h2 class="text-2xl font-bold">Equipment</h2>
                </div>
                <p class="text-white/70 mb-4">
                    View and manage department equipment inventory
                </p>
                <a href="/warehouse" class="text-primary hover:underline font-semibold">
                    View Equipment →
                </a>
            </div>
        </div>

        <!-- Department Meetings Notice -->
        <div class="bg-primary/10 border-l-4 border-primary rounded-lg p-6 mt-12">
            <div class="flex items-start gap-4">
                <div class="flex-shrink-0">
                    <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                </div>
                <div>
                    <h3 class="text-xl font-bold text-primary mb-2">Department Meetings</h3>
                    <p class="text-white/90">
                        Department meetings usually take place every <strong>Sunday at 5:00 PM EST</strong>.
                    </p>
                    <p class="text-white/70 text-sm mt-2">
                        All officers are encouraged to attend. Check Discord for meeting announcements and updates.
                    </p>
                </div>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-12">
            <div class="bg-white/5 rounded-lg p-4 text-center border border-white/10">
                <div class="text-3xl font-bold text-primary mb-1">24/7</div>
                <div class="text-sm text-white/60">Service Availability</div>
                <div class="text-xs text-white/40 mt-1">Always here to serve</div>
            </div>
            <a href="/chain-of-command" class="bg-white/5 rounded-lg p-4 text-center border border-white/10 hover:bg-white/10 transition-all">
                <div class="text-3xl font-bold text-primary mb-1">DPPD</div>
                <div class="text-sm text-white/60">Chain of Command</div>
                <div class="text-xs text-white/40 mt-1">View roster →</div>
            </a>
        </div>

        <!-- Department Subdivisions -->
        <div class="bg-white/5 rounded-lg p-6 border border-white/10 mt-8">
            <h2 class="text-2xl font-bold mb-4">Department Subdivisions</h2>
            <p class="text-white/70 mb-4">
                We have specialized divisions for officers to join and advance their careers. Apply now for:
            </p>
            <!-- Subdivision Overseer -->
            <div id="subdivisionOverseerSection" class="mb-6 hidden">
                <div class="bg-orange-500/10 border border-orange-500/30 rounded-lg p-4">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 bg-orange-500/20 rounded-full flex items-center justify-center">
                            <svg class="w-5 h-5 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                        </div>
                        <div>
                            <div class="text-sm text-orange-400 font-semibold">Subdivision Overseer</div>
                            <div id="overseerName" class="text-white font-bold"></div>
                            <div id="overseerDetails" class="text-xs text-white/60"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="subdivisionsGrid" class="grid grid-cols-2 md:grid-cols-3 gap-3 mb-6">
                <div class="text-center py-4 text-white/60 col-span-full">Loading subdivisions...</div>
            </div>
            <a href="https://discord.com/channels/1322805466975440906/1322807968173002854/1323053201368547480" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 bg-primary hover:bg-primary/80 text-white px-6 py-3 rounded-lg font-semibold transition-all">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"></path>
                </svg>
                Apply for Subdivisions on Discord
            </a>
        </div>
    </div>

    <!-- Image Lightbox Modal -->
    <div id="imageLightbox" class="fixed inset-0 z-50 hidden items-center justify-center bg-black/90 backdrop-blur-sm cursor-pointer">
        <button id="lightboxClose" class="absolute top-4 right-4 text-white/80 hover:text-white transition-colors z-10">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
        <img id="lightboxImage" src="" alt="Enlarged subdivision image" class="max-w-[90vw] max-h-[90vh] object-contain rounded-lg shadow-2xl cursor-default">
    </div>

    <script type="module">
        function getAvailabilityConfig(availability) {
            switch (availability) {
                case 'open':
                    return { color: 'bg-green-500', text: 'Open Applications', textColor: 'text-green-400' };
                case 'tryouts':
                    return { color: 'bg-yellow-500', text: 'Tryouts', textColor: 'text-yellow-400' };
                case 'handpicked':
                    return { color: 'bg-purple-500', text: 'Handpicked', textColor: 'text-purple-400' };
                case 'tryouts-handpicked':
                    return { color: 'bg-orange-500', text: 'Tryouts/Handpicked', textColor: 'text-orange-400' };
                case 'closed':
                    return { color: 'bg-red-500', text: 'Closed', textColor: 'text-red-400' };
                default:
                    return { color: 'bg-gray-500', text: 'Unknown', textColor: 'text-gray-400' };
            }
        }

        async function loadSubdivisionsAndOverseer() {
            const container = document.getElementById('subdivisionsGrid');
            const overseerSection = document.getElementById('subdivisionOverseerSection');
            const overseerNameEl = document.getElementById('overseerName');
            const overseerDetailsEl = document.getElementById('overseerDetails');

            try {
                // Fetch both subdivisions and department data
                const [subResponse, deptResponse] = await Promise.all([
                    fetch('/api/subdivisions'),
                    fetch('/api/department-data')
                ]);

                const subData = await subResponse.json();
                const deptData = await deptResponse.json();

                const subdivisions = subData.subdivisions || [];
                const subdivisionLeadership = deptData.subdivisionLeadership || [];

                // Find the subdivision overseer by subdivisionId
                const overseer = subdivisionLeadership.find(leader =>
                    leader.subdivisionId === 'subdivision-overseer' ||
                    (leader.division && leader.division.toLowerCase().includes('subdivision overseer'))
                );

                // Display overseer if found and has a name
                if (overseer && overseer.name) {
                    overseerNameEl.textContent = overseer.name;
                    let details = [];
                    if (overseer.callSign) details.push(overseer.callSign);
                    if (overseer.jobTitle) details.push(overseer.jobTitle);
                    overseerDetailsEl.textContent = details.join(' • ');
                    overseerSection.classList.remove('hidden');
                }

                // Display subdivisions
                if (subdivisions.length === 0) {
                    container.innerHTML = `<div class="text-center py-4 text-white/60 col-span-full">No subdivisions available.</div>`;
                    return;
                }

                container.innerHTML = subdivisions.map(sub => {
                    const config = getAvailabilityConfig(sub.availability);
                    const imageUrls = sub.imageUrls || [];
                    const hasImages = imageUrls.length > 0;

                    return `
                        <div class="bg-white/5 rounded-lg overflow-hidden border border-white/10 hover:bg-white/10 transition-all">
                            ${hasImages ? `
                            <div class="relative bg-black/30">
                                <div class="subdivision-gallery" data-sub-id="${sub.id}">
                                    <img src="${imageUrls[0]}" alt="${sub.name}" class="w-full h-32 object-contain cursor-pointer hover:opacity-80 transition-opacity subdivision-image" data-sub-id="${sub.id}" onerror="this.parentElement.parentElement.remove()">
                                </div>
                                ${imageUrls.length > 1 ? `
                                <div class="absolute bottom-2 right-2 flex gap-2">
                                    ${imageUrls.map((_, i) => `
                                        <button class="gallery-dot w-4 h-4 rounded-full ${i === 0 ? 'bg-primary' : 'bg-white/50'} transition-all hover:scale-125 hover:bg-primary/80 shadow-md border border-white/30" data-sub-id="${sub.id}" data-img-index="${i}" title="Image ${i + 1}"></button>
                                    `).join('')}
                                </div>
                                ` : ''}
                            </div>
                            ` : ''}
                            <div class="p-3">
                                <div class="flex items-center justify-between mb-1">
                                    <div class="font-bold text-primary">${sub.abbreviation}</div>
                                    <div class="flex items-center gap-1.5">
                                        <span class="inline-block w-2 h-2 ${config.color} rounded-full"></span>
                                        <span class="text-xs ${config.textColor}">${config.text}</span>
                                    </div>
                                </div>
                                <div class="text-sm text-white/60">${sub.name}</div>
                                ${sub.owner ? `
                                <div class="text-xs text-white/50 mt-1 italic">
                                    Head: ${sub.owner}${sub.ownerCallSign ? ` (${sub.ownerCallSign})` : ''}
                                </div>
                                ` : ''}
                            </div>
                        </div>
                    `;
                }).join('');

                // Add gallery navigation functionality
                attachGalleryListeners(subdivisions);

            } catch (error) {
                console.error('Failed to load subdivisions:', error);
                container.innerHTML = `<div class="text-center py-4 text-white/60 col-span-full">Failed to load subdivisions.</div>`;
            }
        }

        function attachGalleryListeners(subdivisions) {
            // Store current image indices
            const currentIndices = {};

            document.querySelectorAll('.gallery-dot').forEach(dot => {
                dot.addEventListener('click', (e) => {
                    e.stopPropagation(); // Prevent lightbox from opening when clicking dots
                    const subId = e.target.dataset.subId;
                    const imgIndex = parseInt(e.target.dataset.imgIndex);
                    const sub = subdivisions.find(s => s.id === subId);

                    if (sub && sub.imageUrls && sub.imageUrls[imgIndex]) {
                        // Update the image
                        const gallery = document.querySelector(`.subdivision-gallery[data-sub-id="${subId}"] img`);
                        if (gallery) {
                            gallery.src = sub.imageUrls[imgIndex];
                        }

                        // Update dot styles
                        document.querySelectorAll(`.gallery-dot[data-sub-id="${subId}"]`).forEach((d, i) => {
                            if (i === imgIndex) {
                                d.classList.remove('bg-white/50');
                                d.classList.add('bg-primary');
                            } else {
                                d.classList.remove('bg-primary');
                                d.classList.add('bg-white/50');
                            }
                        });
                    }
                });
            });

            // Add click listeners to subdivision images for lightbox
            document.querySelectorAll('.subdivision-image').forEach(img => {
                img.addEventListener('click', (e) => {
                    openLightbox(e.target.src);
                });
            });
        }

        // Lightbox functions
        function openLightbox(imageSrc) {
            const lightbox = document.getElementById('imageLightbox');
            const lightboxImage = document.getElementById('lightboxImage');

            lightboxImage.src = imageSrc;
            lightbox.classList.remove('hidden');
            lightbox.classList.add('flex');
            document.body.style.overflow = 'hidden'; // Prevent background scrolling
        }

        function closeLightbox() {
            const lightbox = document.getElementById('imageLightbox');
            lightbox.classList.add('hidden');
            lightbox.classList.remove('flex');
            document.body.style.overflow = ''; // Restore scrolling
        }

        // Set up lightbox event listeners
        function initLightbox() {
            const lightbox = document.getElementById('imageLightbox');
            const lightboxClose = document.getElementById('lightboxClose');
            const lightboxImage = document.getElementById('lightboxImage');

            // Close when clicking the X button
            lightboxClose.addEventListener('click', (e) => {
                e.stopPropagation();
                closeLightbox();
            });

            // Close when clicking the background (not the image)
            lightbox.addEventListener('click', (e) => {
                if (e.target === lightbox) {
                    closeLightbox();
                }
            });

            // Close on Escape key
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape' && !lightbox.classList.contains('hidden')) {
                    closeLightbox();
                }
            });
        }

        // Initialize lightbox on page load
        initLightbox();

        loadSubdivisionsAndOverseer();
    </script>
</Layout>
