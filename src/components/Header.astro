---
const navItems = [
    { linkText: 'Home', href: '/' },
    { linkText: 'Forms', href: '/forms' },
    { linkText: 'About', href: '/about' },
    { linkText: 'Warehouse', href: '/warehouse' },
    { linkText: 'Uniforms', href: '/uniforms' },
    { linkText: 'Resources', href: '/resources' },
    { linkText: 'Chain of Command', href: '/chain-of-command' },
    { linkText: 'Events', href: '/community-events' },
    { linkText: 'Admin', href: '/admin/login' }
];
---

<nav class="flex flex-wrap items-center justify-between gap-4 pt-6 pb-12 sm:pt-8 sm:pb-16 border-b border-white/10">
    <a href="/" class="flex items-center gap-3 no-underline hover:opacity-100">
        <img src="/images/DPPD_Seal_3.png" alt="DPPD Seal" class="w-12 h-12 object-contain">
        <div class="flex flex-col">
            <span class="font-bold text-lg leading-tight">DPPD</span>
            <span class="text-xs text-white/60 leading-tight">Officer Hub</span>
        </div>
    </a>
    {
        !!navItems?.length && (
            <ul class="flex flex-wrap gap-x-2 gap-y-1">
                {navItems.map((item) => (
                    <li>
                        <a href={item.href} class="inline-block px-3 py-2 rounded hover:bg-white/10 transition-colors text-sm">
                            {item.linkText}
                        </a>
                    </li>
                ))}
            </ul>
        )
    }
</nav>
