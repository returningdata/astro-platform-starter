---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Admin - Footer Settings" isAdmin={true}>
    <div class="space-y-8">
        <!-- Header -->
        <div class="flex items-center justify-between flex-wrap gap-4">
            <div>
                <h1 class="text-4xl md:text-5xl font-bold mb-2">Footer Settings</h1>
                <p class="text-white/70">Manage footer content across the website</p>
            </div>
            <div class="flex gap-4">
                <a href="/" class="px-4 py-2 bg-slate-700 hover:bg-slate-600 rounded-lg transition-colors">
                    View Site
                </a>
                <button id="saveBtn" class="px-4 py-2 bg-primary hover:bg-primary/80 rounded-lg transition-colors font-semibold">
                    Save Changes
                </button>
            </div>
        </div>

        <!-- Status Messages -->
        <div id="statusMessage" class="hidden rounded-lg p-4 border">
        </div>

        <!-- Footer Settings Form -->
        <div class="space-y-6">
            <!-- Department Info Section -->
            <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20">
                <h2 class="text-xl font-bold mb-6 flex items-center gap-2">
                    <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                    Department Information
                </h2>
                <div class="grid grid-cols-1 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-slate-300 mb-1">Department Name</label>
                        <input type="text" id="departmentName" class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:ring-2 focus:ring-primary focus:border-transparent" placeholder="Del Perro Police Department">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-300 mb-1">Department Description</label>
                        <textarea id="departmentDescription" rows="3" class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:ring-2 focus:ring-primary focus:border-transparent resize-none" placeholder="Serving and protecting the community..."></textarea>
                    </div>
                </div>
            </div>

            <!-- Quick Links Section -->
            <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-xl font-bold flex items-center gap-2">
                        <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                        </svg>
                        Quick Links
                    </h2>
                    <button id="addLinkBtn" class="px-4 py-2 bg-primary/20 hover:bg-primary/30 border border-primary/50 rounded-lg transition-colors text-sm">
                        + Add Link
                    </button>
                </div>
                <div id="quickLinksContainer" class="space-y-3">
                    <!-- Quick links will be rendered here -->
                </div>
            </div>

            <!-- Contact Information Section -->
            <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20">
                <h2 class="text-xl font-bold mb-6 flex items-center gap-2">
                    <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                    Emergency Contact Information
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-slate-300 mb-1">Emergency Number</label>
                        <input type="text" id="emergencyNumber" class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:ring-2 focus:ring-primary focus:border-transparent" placeholder="911">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-300 mb-1">Non-Emergency Number</label>
                        <input type="text" id="nonEmergencyNumber" class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:ring-2 focus:ring-primary focus:border-transparent" placeholder="(555) 123-4567">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-300 mb-1">Dispatch Number</label>
                        <input type="text" id="dispatchNumber" class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:ring-2 focus:ring-primary focus:border-transparent" placeholder="(555) 123-4568">
                    </div>
                </div>
            </div>

            <!-- Copyright Section -->
            <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20">
                <h2 class="text-xl font-bold mb-6 flex items-center gap-2">
                    <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                    Copyright
                </h2>
                <div>
                    <label class="block text-sm font-medium text-slate-300 mb-1">Copyright Text</label>
                    <p class="text-xs text-white/50 mb-2">The current year will be automatically prepended (e.g., "2024 Your Text Here")</p>
                    <input type="text" id="copyrightText" class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:ring-2 focus:ring-primary focus:border-transparent" placeholder="Del Perro Police Department. All rights reserved.">
                </div>
            </div>

            <!-- Preview Section -->
            <div class="bg-slate-800/50 backdrop-blur-sm rounded-lg p-6 border border-white/10">
                <h2 class="text-xl font-bold mb-6 flex items-center gap-2">
                    <svg class="w-6 h-6 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                    Live Preview
                </h2>
                <div id="footerPreview" class="bg-slate-900 rounded-lg p-6 border border-white/10">
                    <!-- Preview will be rendered here -->
                </div>
            </div>
        </div>
    </div>

    <script type="module">
        let adminUser = null;

        async function validateSessionAndPermissions() {
            try {
                const response = await fetch('/api/auth/session', {
                    method: 'GET',
                    credentials: 'include'
                });
                const data = await response.json();

                if (!data.authenticated) {
                    window.location.href = '/admin/login';
                    return false;
                }

                adminUser = data.user;

                if (!hasPermission()) {
                    document.body.innerHTML = `
                        <div class="min-h-screen flex items-center justify-center bg-slate-900">
                            <div class="text-center p-8">
                                <h1 class="text-3xl font-bold text-red-400 mb-4">Access Denied</h1>
                                <p class="text-white/70 mb-4">You don't have permission to access this page.</p>
                                <a href="/admin" class="px-6 py-2 bg-primary hover:bg-primary/80 rounded-lg">Return to Dashboard</a>
                            </div>
                        </div>
                    `;
                    return false;
                }

                return true;
            } catch (error) {
                console.error('Session validation error:', error);
                window.location.href = '/admin/login';
                return false;
            }
        }

        function hasPermission() {
            if (!adminUser) return false;
            if (adminUser.role === 'super_admin') return true;
            return adminUser.permissions && adminUser.permissions.includes('footer');
        }

        let footerData = {
            departmentName: '',
            departmentDescription: '',
            quickLinks: [],
            emergencyNumber: '',
            nonEmergencyNumber: '',
            dispatchNumber: '',
            copyrightText: ''
        };

        // Load footer data
        async function loadFooterData() {
            try {
                const response = await fetch('/api/footer');
                const data = await response.json();
                footerData = data.footer || footerData;
                populateForm();
                renderQuickLinks();
                updatePreview();
            } catch (error) {
                console.error('Failed to load footer data:', error);
                showStatus('Failed to load footer data', 'error');
            }
        }

        function showStatus(message, type = 'success') {
            const statusEl = document.getElementById('statusMessage');
            statusEl.textContent = message;
            statusEl.className = `rounded-lg p-4 border ${type === 'error' ? 'bg-red-500/20 border-red-500/50 text-red-200' : 'bg-green-500/20 border-green-500/50 text-green-200'}`;
            statusEl.classList.remove('hidden');
            setTimeout(() => statusEl.classList.add('hidden'), 5000);
        }

        function populateForm() {
            document.getElementById('departmentName').value = footerData.departmentName || '';
            document.getElementById('departmentDescription').value = footerData.departmentDescription || '';
            document.getElementById('emergencyNumber').value = footerData.emergencyNumber || '';
            document.getElementById('nonEmergencyNumber').value = footerData.nonEmergencyNumber || '';
            document.getElementById('dispatchNumber').value = footerData.dispatchNumber || '';
            document.getElementById('copyrightText').value = footerData.copyrightText || '';
        }

        function collectFormData() {
            footerData.departmentName = document.getElementById('departmentName').value;
            footerData.departmentDescription = document.getElementById('departmentDescription').value;
            footerData.emergencyNumber = document.getElementById('emergencyNumber').value;
            footerData.nonEmergencyNumber = document.getElementById('nonEmergencyNumber').value;
            footerData.dispatchNumber = document.getElementById('dispatchNumber').value;
            footerData.copyrightText = document.getElementById('copyrightText').value;
        }

        function renderQuickLinks() {
            const container = document.getElementById('quickLinksContainer');

            if (footerData.quickLinks.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-6 text-white/50">
                        No quick links added. Click "Add Link" to create one.
                    </div>
                `;
                return;
            }

            container.innerHTML = footerData.quickLinks.map((link, index) => `
                <div class="flex items-center gap-3 bg-slate-700/30 rounded-lg p-3" data-link-index="${index}">
                    <div class="flex-1 grid grid-cols-1 md:grid-cols-2 gap-3">
                        <input type="text" value="${escapeHtml(link.label)}" class="link-label px-3 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white text-sm focus:ring-2 focus:ring-primary focus:border-transparent" placeholder="Link Label" data-link-index="${index}">
                        <input type="text" value="${escapeHtml(link.url)}" class="link-url px-3 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white text-sm focus:ring-2 focus:ring-primary focus:border-transparent" placeholder="/page-url" data-link-index="${index}">
                    </div>
                    <button class="delete-link p-2 text-red-400 hover:text-red-300 hover:bg-red-500/20 rounded-lg transition-colors" data-link-index="${index}">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                    </button>
                </div>
            `).join('');

            attachLinkEventListeners();
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        function attachLinkEventListeners() {
            // Link label changes
            document.querySelectorAll('.link-label').forEach(input => {
                input.addEventListener('input', (e) => {
                    const index = parseInt(e.target.dataset.linkIndex);
                    footerData.quickLinks[index].label = e.target.value;
                    updatePreview();
                });
            });

            // Link URL changes
            document.querySelectorAll('.link-url').forEach(input => {
                input.addEventListener('input', (e) => {
                    const index = parseInt(e.target.dataset.linkIndex);
                    footerData.quickLinks[index].url = e.target.value;
                    updatePreview();
                });
            });

            // Delete link
            document.querySelectorAll('.delete-link').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const index = parseInt(e.currentTarget.dataset.linkIndex);
                    footerData.quickLinks.splice(index, 1);
                    renderQuickLinks();
                    updatePreview();
                });
            });
        }

        function updatePreview() {
            collectFormData();
            const preview = document.getElementById('footerPreview');
            const currentYear = new Date().getFullYear();

            preview.innerHTML = `
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    <div>
                        <h3 class="font-bold text-lg mb-3">${escapeHtml(footerData.departmentName) || 'Department Name'}</h3>
                        <p class="text-sm text-white/60">
                            ${escapeHtml(footerData.departmentDescription) || 'Department description...'}
                        </p>
                    </div>
                    <div>
                        <h3 class="font-bold text-sm mb-3 text-white/80">Quick Links</h3>
                        <ul class="space-y-2 text-sm text-white/60">
                            ${footerData.quickLinks.length > 0
                                ? footerData.quickLinks.map(link =>
                                    `<li><a href="${escapeHtml(link.url)}" class="hover:text-primary">${escapeHtml(link.label)}</a></li>`
                                ).join('')
                                : '<li class="italic">No quick links</li>'}
                        </ul>
                    </div>
                    <div>
                        <h3 class="font-bold text-sm mb-3 text-white/80">Emergency Contact</h3>
                        <ul class="space-y-2 text-sm text-white/60">
                            <li>Emergency: <span class="text-primary font-semibold">${escapeHtml(footerData.emergencyNumber) || '911'}</span></li>
                            <li>Non-Emergency: <span class="text-white/80">${escapeHtml(footerData.nonEmergencyNumber) || '(555) 123-4567'}</span></li>
                            <li>Dispatch: <span class="text-white/80">${escapeHtml(footerData.dispatchNumber) || '(555) 123-4568'}</span></li>
                        </ul>
                    </div>
                </div>
                <div class="mt-8 pt-8 border-t border-white/10 text-center text-sm text-white/50">
                    <p>&copy; ${currentYear} ${escapeHtml(footerData.copyrightText) || 'Department Name. All rights reserved.'}</p>
                </div>
            `;
        }

        // Add new link
        document.getElementById('addLinkBtn').addEventListener('click', () => {
            footerData.quickLinks.push({ label: '', url: '' });
            renderQuickLinks();
            updatePreview();
        });

        // Input change listeners for preview update
        ['departmentName', 'departmentDescription', 'emergencyNumber', 'nonEmergencyNumber', 'dispatchNumber', 'copyrightText'].forEach(id => {
            document.getElementById(id).addEventListener('input', updatePreview);
        });

        // Save changes
        document.getElementById('saveBtn').addEventListener('click', async () => {
            const saveBtn = document.getElementById('saveBtn');
            saveBtn.disabled = true;
            saveBtn.textContent = 'Saving...';

            collectFormData();

            try {
                const response = await fetch('/api/footer', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    credentials: 'include',
                    body: JSON.stringify({ footer: footerData })
                });

                const result = await response.json();

                if (result.success) {
                    showStatus('Footer settings saved successfully!', 'success');
                } else {
                    showStatus(result.error || 'Failed to save changes', 'error');
                }
            } catch (error) {
                console.error('Save error:', error);
                showStatus('Failed to save changes', 'error');
            } finally {
                saveBtn.disabled = false;
                saveBtn.textContent = 'Save Changes';
            }
        });

        // Initialize
        validateSessionAndPermissions().then(valid => {
            if (valid) {
                loadFooterData();
            }
        });
    </script>
</Layout>
