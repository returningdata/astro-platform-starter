---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Forms" description="Submit forms for DPPD processing">
    <div class="space-y-8">
        <!-- Header -->
        <div class="text-center">
            <h1 class="text-4xl md:text-5xl font-bold mb-2">Forms</h1>
            <p class="text-white/70">Select a form to submit</p>
        </div>

        <!-- Status Messages -->
        <div id="statusMessage" class="hidden rounded-lg p-4 border">
        </div>

        <!-- Loading State -->
        <div id="loadingState" class="text-center py-12">
            <div class="inline-block animate-spin rounded-full h-8 w-8 border-4 border-primary border-t-transparent"></div>
            <p class="text-white/60 mt-4">Loading forms...</p>
        </div>

        <!-- Empty State -->
        <div id="emptyState" class="hidden text-center py-12 bg-white/5 rounded-lg border border-white/10">
            <svg class="w-16 h-16 mx-auto text-white/40 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <h3 class="text-xl font-semibold text-white/70 mb-2">No Forms Available</h3>
            <p class="text-white/50">There are currently no forms available for submission.</p>
        </div>

        <!-- Forms Grid -->
        <div id="formsGrid" class="hidden grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Forms will be loaded here -->
        </div>
    </div>

    <script type="module">
        const colorClasses = {
            'indigo': {
                bg: 'bg-indigo-500/20',
                border: 'border-indigo-500/30',
                hover: 'hover:border-indigo-400',
                icon: 'text-indigo-400'
            },
            'blue': {
                bg: 'bg-blue-500/20',
                border: 'border-blue-500/30',
                hover: 'hover:border-blue-400',
                icon: 'text-blue-400'
            },
            'purple': {
                bg: 'bg-purple-500/20',
                border: 'border-purple-500/30',
                hover: 'hover:border-purple-400',
                icon: 'text-purple-400'
            },
            'cyan': {
                bg: 'bg-cyan-500/20',
                border: 'border-cyan-500/30',
                hover: 'hover:border-cyan-400',
                icon: 'text-cyan-400'
            },
            'amber': {
                bg: 'bg-amber-500/20',
                border: 'border-amber-500/30',
                hover: 'hover:border-amber-400',
                icon: 'text-amber-400'
            },
            'green': {
                bg: 'bg-green-500/20',
                border: 'border-green-500/30',
                hover: 'hover:border-green-400',
                icon: 'text-green-400'
            },
            'red': {
                bg: 'bg-red-500/20',
                border: 'border-red-500/30',
                hover: 'hover:border-red-400',
                icon: 'text-red-400'
            },
            'pink': {
                bg: 'bg-pink-500/20',
                border: 'border-pink-500/30',
                hover: 'hover:border-pink-400',
                icon: 'text-pink-400'
            },
            'orange': {
                bg: 'bg-orange-500/20',
                border: 'border-orange-500/30',
                hover: 'hover:border-orange-400',
                icon: 'text-orange-400'
            },
            'teal': {
                bg: 'bg-teal-500/20',
                border: 'border-teal-500/30',
                hover: 'hover:border-teal-400',
                icon: 'text-teal-400'
            }
        };

        function getColorClass(color) {
            return colorClasses[color] || colorClasses['indigo'];
        }

        function showStatus(message, type = 'success') {
            const statusEl = document.getElementById('statusMessage');
            statusEl.textContent = message;
            statusEl.className = `rounded-lg p-4 border ${type === 'error' ? 'bg-red-500/20 border-red-500/50 text-red-200' : 'bg-green-500/20 border-green-500/50 text-green-200'}`;
            statusEl.classList.remove('hidden');
            setTimeout(() => statusEl.classList.add('hidden'), 5000);
        }

        function renderFormCard(form) {
            // Get the primary color from the first section or default to indigo
            const primaryColor = form.sections && form.sections[0] ? form.sections[0].color : 'indigo';
            const colors = getColorClass(primaryColor);
            const sectionCount = form.sections ? form.sections.length : 0;
            const fieldCount = form.sections ? form.sections.reduce((total, s) => total + (s.fields ? s.fields.length : 0), 0) : 0;

            return `
                <a href="/forms/${form.slug}" class="block ${colors.bg} backdrop-blur-sm rounded-lg p-6 border ${colors.border} ${colors.hover} hover:bg-white/10 transition-all group">
                    <div class="flex items-start gap-4">
                        <div class="w-12 h-12 bg-white/10 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform">
                            <svg class="w-6 h-6 ${colors.icon}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                        </div>
                        <div class="flex-1">
                            <h3 class="text-xl font-bold text-white group-hover:text-primary transition-colors">${form.name}</h3>
                            <p class="text-white/60 text-sm mt-1">${form.description || 'No description provided'}</p>
                            <div class="flex items-center gap-4 mt-3 text-xs text-white/50">
                                <span>${sectionCount} section${sectionCount !== 1 ? 's' : ''}</span>
                                <span>${fieldCount} field${fieldCount !== 1 ? 's' : ''}</span>
                            </div>
                        </div>
                        <svg class="w-5 h-5 text-white/40 group-hover:text-white/70 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </div>
                </a>
            `;
        }

        async function loadForms() {
            const loadingState = document.getElementById('loadingState');
            const emptyState = document.getElementById('emptyState');
            const formsGrid = document.getElementById('formsGrid');

            try {
                const response = await fetch('/api/forms?enabled=true');
                const data = await response.json();

                loadingState.classList.add('hidden');

                if (!data.success) {
                    showStatus('Failed to load forms: ' + (data.error || 'Unknown error'), 'error');
                    return;
                }

                const forms = data.forms || [];

                if (forms.length === 0) {
                    emptyState.classList.remove('hidden');
                    return;
                }

                formsGrid.classList.remove('hidden');
                formsGrid.innerHTML = forms.map(form => renderFormCard(form)).join('');
            } catch (error) {
                console.error('Failed to load forms:', error);
                loadingState.classList.add('hidden');
                showStatus('Failed to load forms. Please try again.', 'error');
            }
        }

        // Initialize
        loadForms();
    </script>
</Layout>
