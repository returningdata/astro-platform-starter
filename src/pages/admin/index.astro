---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Admin Dashboard - DPPD">
    <div class="space-y-8">
        <!-- Header -->
        <div class="flex items-center justify-between flex-wrap gap-4">
            <div>
                <h1 class="text-4xl md:text-5xl font-bold mb-2">Admin Dashboard</h1>
                <p class="text-white/70">Del Perro Police Department Administration</p>
            </div>
            <div id="userInfo" class="text-right">
                <p class="text-white/90 font-semibold" id="welcomeText">Welcome</p>
                <p class="text-white/60 text-sm" id="roleText"></p>
            </div>
        </div>

        <!-- Content Management -->
        <div class="space-y-4">
            <h2 class="text-2xl font-bold text-white/90">Content Management</h2>
            <div id="contentManagementGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Items will be populated by JavaScript based on permissions -->
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="space-y-4">
            <h2 class="text-2xl font-bold text-white/90">Quick Actions</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- View Site -->
                <a href="/" class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20 hover:bg-white/15 hover:border-primary transition-all group">
                    <div class="flex items-center gap-4 mb-4">
                        <div class="w-14 h-14 bg-slate-600 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                            </svg>
                        </div>
                        <div>
                            <h2 class="text-xl font-bold">View Site</h2>
                            <p class="text-white/60 text-sm">Go to public site</p>
                        </div>
                    </div>
                    <p class="text-white/70 text-sm">View the public-facing website to see how your changes appear to visitors.</p>
                </a>

                <!-- Logout -->
                <a href="/admin/login" id="logoutBtn" class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20 hover:bg-white/15 hover:border-red-500 transition-all group">
                    <div class="flex items-center gap-4 mb-4">
                        <div class="w-14 h-14 bg-red-500/50 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                            </svg>
                        </div>
                        <div>
                            <h2 class="text-xl font-bold">Logout</h2>
                            <p class="text-white/60 text-sm">End your session</p>
                        </div>
                    </div>
                    <p class="text-white/70 text-sm">Log out of the admin panel and return to the login page.</p>
                </a>
            </div>
        </div>
    </div>

    <script type="module">
        // Admin menu items configuration
        const menuItems = [
            {
                id: 'warehouse',
                title: 'Warehouse',
                description: 'Manage inventory & images',
                detail: 'Edit warehouse categories, add or remove items, and upload images for each category.',
                href: '/admin/warehouse',
                iconColor: 'bg-primary',
                icon: '<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" /></svg>'
            },
            {
                id: 'events',
                title: 'Events',
                description: 'Manage community events',
                detail: 'Add, edit, or remove community events. Set dates, locations, and event status.',
                href: '/admin/events',
                iconColor: 'bg-green-600',
                icon: '<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>'
            },
            {
                id: 'resources',
                title: 'Resources',
                description: 'Manage department resources',
                detail: 'Edit department documents and resource links. Add or update official document URLs.',
                href: '/admin/resources',
                iconColor: 'bg-blue-600',
                icon: '<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>'
            },
            {
                id: 'uniforms',
                title: 'Uniforms',
                description: 'Manage uniform inventory',
                detail: 'Add, edit, or remove uniform categories and items. Track availability status.',
                href: '/admin/uniforms',
                iconColor: 'bg-purple-600',
                icon: '<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>'
            },
            {
                id: 'theme-settings',
                title: 'Theme Settings',
                description: 'Seasonal themes & effects',
                detail: 'Switch between Christmas, Halloween, and Default themes. Customize effects and music.',
                href: '/admin/theme-settings',
                iconColor: 'bg-gradient-to-br from-orange-500 via-green-600 to-blue-600',
                icon: '<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" /></svg>'
            },
            {
                id: 'department-data',
                title: 'Department Data',
                description: 'Awards & Chain of Command',
                detail: 'Manage award recipients and assign names to high command positions with call signs.',
                href: '/admin/department-data',
                iconColor: 'bg-gradient-to-br from-teal-500 to-yellow-500',
                icon: '<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" /></svg>'
            },
            {
                id: 'subdivisions',
                title: 'Subdivisions',
                description: 'Manage division availability',
                detail: 'Edit subdivisions and set their availability status (Tryouts, Open, Handpicked, Closed).',
                href: '/admin/subdivisions',
                iconColor: 'bg-gradient-to-br from-cyan-500 to-blue-600',
                icon: '<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" /></svg>'
            },
            {
                id: 'footer',
                title: 'Footer Settings',
                description: 'Customize site footer',
                detail: 'Edit footer content including department info, quick links, contact numbers, and copyright text.',
                href: '/admin/footer',
                iconColor: 'bg-gradient-to-br from-slate-500 to-slate-700',
                icon: '<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" /></svg>'
            },
            {
                id: 'user-management',
                title: 'User Management',
                description: 'Manage admin accounts',
                detail: 'Create, edit, and delete admin users. Assign roles and permissions.',
                href: '/admin/users',
                iconColor: 'bg-gradient-to-br from-pink-500 to-red-600',
                icon: '<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" /></svg>'
            },
            {
                id: 'webhook-settings',
                title: 'Webhook Settings',
                description: 'Discord webhook config',
                detail: 'Configure Discord webhook URL for site status updates. Send manual updates.',
                href: '/admin/webhook-settings',
                iconColor: 'bg-gradient-to-br from-indigo-500 to-purple-600',
                icon: '<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" /></svg>'
            },
            {
                id: 'chain-of-command-webhook',
                title: 'Chain of Command Webhook',
                description: 'Discord CoC auto-poster',
                detail: 'Manage the automated Discord webhook that posts the chain of command every 6 hours.',
                href: '/admin/chain-of-command-webhook',
                iconColor: 'bg-gradient-to-br from-amber-500 to-orange-600',
                icon: '<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" /></svg>'
            },
            {
                id: 'arrest-reports',
                title: 'Arrest Reports',
                description: 'Manage case statuses',
                detail: 'Lookup arrest reports by case ID, view recent submissions, and update case statuses.',
                href: '/admin/arrest-reports',
                iconColor: 'bg-gradient-to-br from-orange-500 to-red-600',
                icon: '<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 2v6h6" /></svg>'
            }
        ];

        // Check if user is logged in via server-side session
        let adminUser = null;

        async function validateSession() {
            try {
                const response = await fetch('/api/auth/session', {
                    method: 'GET',
                    credentials: 'include'
                });
                const data = await response.json();

                if (!data.authenticated) {
                    window.location.href = '/admin/login';
                    return;
                }

                adminUser = data.user;

                // Update welcome message
                document.getElementById('welcomeText').textContent = `Welcome, ${adminUser.displayName}`;
                document.getElementById('roleText').textContent = adminUser.role === 'super_admin' ? 'Super Admin' :
                    adminUser.role === 'subdivision_overseer' ? 'Subdivision Overseer' : 'Custom Role';

                // Render menu items now that we have user data
                renderMenuItems();
            } catch (error) {
                console.error('Session validation error:', error);
                window.location.href = '/admin/login';
            }
        }

        // Function to check if user has permission
        function hasPermission(permissionId) {
            if (!adminUser) return false;
            if (adminUser.role === 'super_admin') return true;

            // Special handling for subdivision overseer
            if (adminUser.role === 'subdivision_overseer') {
                // Can access department-data but only subdivision leadership section
                if (permissionId === 'department-data-subdivisions' || permissionId === 'subdivisions') {
                    return true;
                }
                // Also allow access to department-data page (they'll see limited content)
                if (permissionId === 'department-data') {
                    return adminUser.permissions.includes('department-data-subdivisions');
                }
            }

            return adminUser.permissions.includes(permissionId);
        }

        // Render menu items based on permissions
        function renderMenuItems() {
            const grid = document.getElementById('contentManagementGrid');

            const allowedItems = menuItems.filter(item => hasPermission(item.id));

            if (allowedItems.length === 0) {
                grid.innerHTML = `
                    <div class="col-span-full text-center py-12 text-white/60">
                        <p>You don't have permission to access any admin features.</p>
                        <p class="mt-2">Please contact a super admin for access.</p>
                    </div>
                `;
                return;
            }

            grid.innerHTML = allowedItems.map(item => `
                <a href="${item.href}" class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20 hover:bg-white/15 hover:border-primary transition-all group">
                    <div class="flex items-center gap-4 mb-4">
                        <div class="w-14 h-14 ${item.iconColor} rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform">
                            ${item.icon}
                        </div>
                        <div>
                            <h2 class="text-xl font-bold">${item.title}</h2>
                            <p class="text-white/60 text-sm">${item.description}</p>
                        </div>
                    </div>
                    <p class="text-white/70 text-sm">${item.detail}</p>
                </a>
            `).join('');
        }

        // Logout handler
        document.getElementById('logoutBtn').addEventListener('click', async (e) => {
            e.preventDefault();
            try {
                await fetch('/api/auth/logout', {
                    method: 'POST',
                    credentials: 'include'
                });
            } catch (error) {
                console.error('Logout error:', error);
            }
            window.location.href = '/admin/login';
        });

        // Initialize - validate session first
        validateSession();
    </script>
</Layout>
