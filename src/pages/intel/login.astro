---
import Layout from '../../layouts/Layout.astro';

export const prerender = false;
---

<Layout title="Intel Login - DPPD">
    <div class="flex items-center justify-center py-12">
        <div class="w-full max-w-md">
            <div class="bg-slate-800/50 rounded-lg border border-slate-700 p-8">
                <div class="text-center mb-8">
                    <div class="w-20 h-20 bg-gradient-to-br from-red-600 to-orange-600 rounded-lg flex items-center justify-center mx-auto mb-4">
                        <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                        </svg>
                    </div>
                    <h1 class="text-2xl font-bold text-white">Intel Access</h1>
                    <p class="text-slate-400 mt-2">Gang & Militia Intelligence Database</p>
                </div>

                <div id="errorAlert" class="hidden bg-red-500/20 border border-red-500/50 rounded-lg p-4 text-red-200 mb-6">
                    <span id="errorMessage"></span>
                </div>

                <div class="space-y-4">
                    <a
                        href="/api/auth/google?returnTo=/intel"
                        class="w-full py-3 px-4 bg-white hover:bg-gray-100 text-gray-800 font-semibold rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-slate-800 flex items-center justify-center gap-3"
                    >
                        <svg class="w-6 h-6" viewBox="0 0 24 24">
                            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                        </svg>
                        Sign in with Google
                    </a>
                </div>

                <div class="mt-6 p-4 bg-slate-700/50 rounded-lg border border-slate-600">
                    <h3 class="font-semibold text-sm text-white/90 mb-2">Access Requirements</h3>
                    <ul class="text-sm text-white/70 space-y-1">
                        <li>• Sign in with your Google account</li>
                        <li>• Wait for administrator approval</li>
                        <li>• Access level determines visible content</li>
                    </ul>
                </div>

                <p class="mt-6 text-center text-sm text-slate-400">
                    <a href="/" class="hover:text-primary transition-colors">&larr; Back to Home</a>
                </p>
            </div>
        </div>
    </div>

    <script type="module">
        // Error messages for OAuth errors
        const errorMessages = {
            'google_access_denied': 'You cancelled the Google login.',
            'missing_params': 'Invalid login request. Please try again.',
            'state_mismatch': 'Security validation failed. Please try again.',
            'callback_failed': 'Google authentication failed. Please try again.',
        };

        // Check for OAuth error in URL
        function checkOAuthError() {
            const params = new URLSearchParams(window.location.search);
            const error = params.get('error');

            if (error && errorMessages[error]) {
                document.getElementById('errorMessage').textContent = errorMessages[error];
                document.getElementById('errorAlert').classList.remove('hidden');
                // Clean up URL
                window.history.replaceState({}, document.title, window.location.pathname);
            } else if (error) {
                document.getElementById('errorMessage').textContent = 'An error occurred during login. Please try again.';
                document.getElementById('errorAlert').classList.remove('hidden');
                window.history.replaceState({}, document.title, window.location.pathname);
            }
        }
        checkOAuthError();

        // Check if already logged in
        async function checkSession() {
            try {
                const response = await fetch('/api/intel/session', {
                    method: 'GET',
                    credentials: 'include'
                });
                const data = await response.json();
                if (data.authenticated) {
                    window.location.href = '/intel';
                }
            } catch (error) {
                // Not authenticated, stay on login page
            }
        }
        checkSession();
    </script>
</Layout>
