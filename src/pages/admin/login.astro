---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Admin Login - DPPD">
    <div class="flex items-center justify-center py-12">
        <div class="w-full max-w-md">
            <div class="bg-slate-800/50 rounded-lg border border-slate-700 p-8">
                <div class="text-center mb-8">
                    <div class="w-20 h-20 bg-primary rounded-lg flex items-center justify-center mx-auto mb-4">
                        <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                        </svg>
                    </div>
                    <h1 class="text-2xl font-bold text-white">Admin Login</h1>
                    <p class="text-slate-400 mt-2">Del Perro Police Department</p>
                </div>

                <div id="errorAlert" class="hidden bg-red-500/20 border border-red-500/50 rounded-lg p-4 text-red-200 mb-6">
                    <span id="errorMessage"></span>
                </div>

                <!-- Discord Login Button -->
                <a
                    href="/api/auth/discord"
                    id="discordBtn"
                    class="w-full py-3 px-4 bg-[#5865F2] hover:bg-[#4752C4] text-white font-semibold rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-[#5865F2] focus:ring-offset-2 focus:ring-offset-slate-800 flex items-center justify-center gap-3"
                >
                    <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/>
                    </svg>
                    Sign in with Discord
                </a>

                <div class="relative my-6">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-slate-600"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-4 bg-slate-800/50 text-slate-400">or continue with username</span>
                    </div>
                </div>

                <form id="loginForm" class="space-y-6">
                    <div>
                        <label for="username" class="block text-sm font-medium text-slate-300 mb-2">
                            Username
                        </label>
                        <input
                            type="text"
                            id="username"
                            name="username"
                            required
                            class="w-full px-4 py-3 bg-slate-700/50 border border-slate-600 rounded-lg text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                            placeholder="Enter your username"
                        />
                    </div>

                    <div>
                        <label for="password" class="block text-sm font-medium text-slate-300 mb-2">
                            Password
                        </label>
                        <input
                            type="password"
                            id="password"
                            name="password"
                            required
                            class="w-full px-4 py-3 bg-slate-700/50 border border-slate-600 rounded-lg text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                            placeholder="Enter your password"
                        />
                    </div>

                    <button
                        type="submit"
                        id="submitBtn"
                        class="w-full py-3 px-4 bg-primary hover:bg-primary/80 text-white font-semibold rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-slate-800"
                    >
                        Sign In
                    </button>
                </form>

                <p class="mt-6 text-center text-sm text-slate-400">
                    <a href="/" class="hover:text-primary transition-colors">&larr; Back to Home</a>
                </p>
            </div>
        </div>
    </div>

    <script type="module">
        const form = document.getElementById('loginForm');
        const errorAlert = document.getElementById('errorAlert');
        const errorMessage = document.getElementById('errorMessage');
        const submitBtn = document.getElementById('submitBtn');

        // Error messages for Discord OAuth errors
        const errorMessages = {
            'discord_access_denied': 'You cancelled the Discord login.',
            'missing_params': 'Invalid login request. Please try again.',
            'state_mismatch': 'Security validation failed. Please try again.',
            'not_member': 'You must be a member of the DPPD Discord server to log in.',
            'no_role': 'You do not have the required Discord role to access the admin panel.',
            'callback_failed': 'Discord authentication failed. Please try again.',
            'server_config': 'Server configuration error. Please contact an administrator.',
            'inactivity': 'You have been logged out due to inactivity. Please sign in again.'
        };

        // Check for OAuth error or reason in URL
        function checkOAuthError() {
            const params = new URLSearchParams(window.location.search);
            const error = params.get('error');
            const reason = params.get('reason');

            if (reason && errorMessages[reason]) {
                errorMessage.textContent = errorMessages[reason];
                errorAlert.classList.remove('hidden');
                // Clean up URL
                window.history.replaceState({}, document.title, window.location.pathname);
            } else if (error && errorMessages[error]) {
                errorMessage.textContent = errorMessages[error];
                errorAlert.classList.remove('hidden');
                // Clean up URL
                window.history.replaceState({}, document.title, window.location.pathname);
            } else if (error) {
                errorMessage.textContent = 'An error occurred during login. Please try again.';
                errorAlert.classList.remove('hidden');
                window.history.replaceState({}, document.title, window.location.pathname);
            }
        }
        checkOAuthError();

        // Check if already logged in via server-side session
        async function checkSession() {
            try {
                const response = await fetch('/api/auth/session', {
                    method: 'GET',
                    credentials: 'include'
                });
                const data = await response.json();
                if (data.authenticated) {
                    window.location.href = '/admin';
                }
            } catch (error) {
                // Not authenticated, stay on login page
            }
        }
        checkSession();

        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;

            submitBtn.disabled = true;
            submitBtn.textContent = 'Signing in...';
            errorAlert.classList.add('hidden');

            try {
                const response = await fetch('/api/auth/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ username, password }),
                    credentials: 'include'
                });

                const data = await response.json();

                if (data.success) {
                    // Session is stored server-side via HTTP-only cookie
                    // Redirect to admin dashboard
                    window.location.href = '/admin';
                } else {
                    errorMessage.textContent = data.error || 'Login failed';
                    errorAlert.classList.remove('hidden');
                }
            } catch (error) {
                errorMessage.textContent = 'An error occurred. Please try again.';
                errorAlert.classList.remove('hidden');
            } finally {
                submitBtn.disabled = false;
                submitBtn.textContent = 'Sign In';
            }
        });
    </script>
</Layout>
