---
import Layout from '../layouts/Layout.astro';
---

<Layout title="DPPD Warehouse - Del Perro Police Department">
    <div class="space-y-8">
        <!-- Header -->
        <div class="flex items-center justify-between flex-wrap gap-4">
            <div>
                <h1 class="text-4xl md:text-5xl font-bold mb-2">DPPD Warehouse</h1>
                <p class="text-white/70">View department vehicles</p>
            </div>
        </div>

        <!-- Warehouse Categories -->
        <div id="warehouseGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Loading state -->
            <div class="col-span-full text-center py-12 text-white/60">
                Loading warehouse vehicles...
            </div>
        </div>

        <!-- Legend -->
        <div class="bg-white/5 rounded-lg p-4 border border-white/10">
            <div class="flex items-center gap-6 text-sm flex-wrap">
                <div class="flex items-center gap-2">
                    <span class="w-3 h-3 bg-green-500 rounded-full"></span>
                    <span class="text-white/70">Available</span>
                </div>
                <div class="flex items-center gap-2">
                    <span class="w-3 h-3 bg-yellow-500 rounded-full"></span>
                    <span class="text-white/70">Limited Stock</span>
                </div>
                <div class="flex items-center gap-2">
                    <span class="w-3 h-3 bg-red-500 rounded-full"></span>
                    <span class="text-white/70">Out of Stock</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Image Modal for full-size viewing -->
    <div id="imageModal" class="fixed inset-0 bg-black/90 z-50 hidden items-center justify-center p-4">
        <button id="closeModal" class="absolute top-4 right-4 text-white/80 hover:text-white p-2">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>
        <button id="modalPrev" class="absolute left-4 top-1/2 -translate-y-1/2 text-white/80 hover:text-white p-2 bg-black/30 rounded-full">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
        </button>
        <img id="modalImage" src="" alt="Vehicle image" class="max-w-full max-h-[85vh] object-contain rounded-lg">
        <button id="modalNext" class="absolute right-4 top-1/2 -translate-y-1/2 text-white/80 hover:text-white p-2 bg-black/30 rounded-full">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
        </button>
        <div id="modalCounter" class="absolute bottom-4 left-1/2 -translate-x-1/2 text-white/80 bg-black/50 px-3 py-1 rounded-full text-sm"></div>
    </div>

    <script type="module">
        const icons = {
            vehicle: '<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>',
            firearm: '<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" /></svg>',
            communication: '<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0" /></svg>',
            protection: '<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>',
            investigation: '<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>',
            traffic: '<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>'
        };

        const statusColors = {
            available: 'bg-green-500',
            limited: 'bg-yellow-500',
            out: 'bg-red-500'
        };

        let warehouseData = [];
        let modalState = { images: [], currentIndex: 0 }; // Modal state for image gallery

        async function loadWarehouse() {
            try {
                const response = await fetch('/api/warehouse');
                const data = await response.json();
                warehouseData = data.warehouse || [];

                renderWarehouse();
                setupModal();
            } catch (error) {
                console.error('Failed to load warehouse:', error);
                document.getElementById('warehouseGrid').innerHTML = `
                    <div class="col-span-full text-center py-12 text-red-400">
                        Failed to load warehouse inventory. Please refresh the page.
                    </div>
                `;
            }
        }

        function renderWarehouse() {
            const grid = document.getElementById('warehouseGrid');

            if (warehouseData.length === 0) {
                grid.innerHTML = `
                    <div class="col-span-full text-center py-12 text-white/60">
                        No items available in the warehouse.
                    </div>
                `;
                return;
            }

            grid.innerHTML = warehouseData.map((category, catIndex) => {
                // Get image URLs directly
                const images = category.imageUrls || [];
                const hasImages = images.length > 0;
                const hasMultipleImages = images.length > 1;

                return `
                <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20">
                    ${hasImages ? `
                        <div class="mb-4 -mx-2 -mt-2 relative group">
                            <div class="gallery-container" data-category="${catIndex}">
                                <img src="${images[0]}" alt="${category.name}" class="gallery-image w-full h-40 object-cover rounded-lg cursor-pointer" data-category="${catIndex}" data-index="0" onerror="this.style.display='none'">
                                ${hasMultipleImages ? `
                                    <button class="gallery-prev absolute left-2 top-1/2 -translate-y-1/2 bg-black/50 hover:bg-black/70 text-white p-1.5 rounded-full opacity-0 group-hover:opacity-100 transition-opacity" data-category="${catIndex}">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                                        </svg>
                                    </button>
                                    <button class="gallery-next absolute right-2 top-1/2 -translate-y-1/2 bg-black/50 hover:bg-black/70 text-white p-1.5 rounded-full opacity-0 group-hover:opacity-100 transition-opacity" data-category="${catIndex}">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                        </svg>
                                    </button>
                                    <div class="gallery-dots absolute bottom-2 left-1/2 -translate-x-1/2 flex gap-2">
                                        ${images.map((_, i) => `
                                            <button class="gallery-dot w-4 h-4 rounded-full transition-all hover:scale-125 shadow-md border border-white/30 ${i === 0 ? 'bg-white' : 'bg-white/50'}" data-category="${catIndex}" data-index="${i}" title="Image ${i + 1}"></button>
                                        `).join('')}
                                    </div>
                                    <span class="absolute top-2 right-2 bg-black/60 text-white text-xs px-2 py-1 rounded-full">${images.length} photos</span>
                                ` : ''}
                            </div>
                        </div>
                    ` : ''}
                    <div class="flex items-center gap-3 mb-4">
                        <div class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center">
                            ${icons[category.icon] || icons.vehicle}
                        </div>
                        <h2 class="text-2xl font-bold">${category.name}</h2>
                    </div>
                    <ul class="space-y-2 text-white/70">
                        ${category.items.map(item => `
                            <li class="flex items-center gap-2">
                                <span class="w-2 h-2 ${statusColors[item.status]} rounded-full"></span>
                                ${item.name}
                            </li>
                        `).join('')}
                    </ul>
                </div>
            `;}).join('');

            // Attach gallery event listeners
            attachGalleryListeners();
        }

        // Track current gallery state per category
        let galleryState = {};

        function attachGalleryListeners() {
            // Initialize gallery state
            warehouseData.forEach((category, catIndex) => {
                const images = category.imageUrls || [];
                galleryState[catIndex] = { images, currentIndex: 0 };
            });

            // Gallery prev buttons
            document.querySelectorAll('.gallery-prev').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    const catIndex = parseInt(e.currentTarget.dataset.category);
                    navigateGallery(catIndex, -1);
                });
            });

            // Gallery next buttons
            document.querySelectorAll('.gallery-next').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    const catIndex = parseInt(e.currentTarget.dataset.category);
                    navigateGallery(catIndex, 1);
                });
            });

            // Gallery dot navigation
            document.querySelectorAll('.gallery-dot').forEach(dot => {
                dot.addEventListener('click', (e) => {
                    e.stopPropagation();
                    const catIndex = parseInt(e.target.dataset.category);
                    const index = parseInt(e.target.dataset.index);
                    setGalleryIndex(catIndex, index);
                });
            });

            // Click on image to open modal
            document.querySelectorAll('.gallery-image').forEach(img => {
                img.addEventListener('click', (e) => {
                    const catIndex = parseInt(e.target.dataset.category);
                    const state = galleryState[catIndex];
                    if (state && state.images.length > 0) {
                        openModal(state.images, state.currentIndex);
                    }
                });
            });
        }

        function navigateGallery(catIndex, direction) {
            const state = galleryState[catIndex];
            if (!state || state.images.length <= 1) return;

            let newIndex = state.currentIndex + direction;
            if (newIndex < 0) newIndex = state.images.length - 1;
            if (newIndex >= state.images.length) newIndex = 0;

            setGalleryIndex(catIndex, newIndex);
        }

        function setGalleryIndex(catIndex, index) {
            const state = galleryState[catIndex];
            if (!state) return;

            state.currentIndex = index;

            // Update image
            const container = document.querySelector(`.gallery-container[data-category="${catIndex}"]`);
            if (container) {
                const img = container.querySelector('.gallery-image');
                if (img) {
                    img.src = state.images[index];
                    img.dataset.index = index;
                }

                // Update dots
                const dots = container.querySelectorAll('.gallery-dot');
                dots.forEach((dot, i) => {
                    dot.className = `gallery-dot w-4 h-4 rounded-full transition-all hover:scale-125 shadow-md border border-white/30 ${i === index ? 'bg-white' : 'bg-white/50'}`;
                });
            }
        }

        // Modal functions
        function setupModal() {
            const modal = document.getElementById('imageModal');
            const closeBtn = document.getElementById('closeModal');
            const prevBtn = document.getElementById('modalPrev');
            const nextBtn = document.getElementById('modalNext');

            closeBtn.addEventListener('click', closeModal);
            modal.addEventListener('click', (e) => {
                if (e.target === modal) closeModal();
            });

            prevBtn.addEventListener('click', () => navigateModal(-1));
            nextBtn.addEventListener('click', () => navigateModal(1));

            // Keyboard navigation
            document.addEventListener('keydown', (e) => {
                if (!modal.classList.contains('hidden')) {
                    if (e.key === 'Escape') closeModal();
                    if (e.key === 'ArrowLeft') navigateModal(-1);
                    if (e.key === 'ArrowRight') navigateModal(1);
                }
            });
        }

        function openModal(images, startIndex = 0) {
            modalState.images = images;
            modalState.currentIndex = startIndex;

            const modal = document.getElementById('imageModal');
            modal.classList.remove('hidden');
            modal.classList.add('flex');
            updateModalImage();

            // Hide nav buttons if only one image
            document.getElementById('modalPrev').style.display = images.length > 1 ? 'block' : 'none';
            document.getElementById('modalNext').style.display = images.length > 1 ? 'block' : 'none';
        }

        function closeModal() {
            const modal = document.getElementById('imageModal');
            modal.classList.add('hidden');
            modal.classList.remove('flex');
        }

        function navigateModal(direction) {
            let newIndex = modalState.currentIndex + direction;
            if (newIndex < 0) newIndex = modalState.images.length - 1;
            if (newIndex >= modalState.images.length) newIndex = 0;
            modalState.currentIndex = newIndex;
            updateModalImage();
        }

        function updateModalImage() {
            document.getElementById('modalImage').src = modalState.images[modalState.currentIndex];
            document.getElementById('modalCounter').textContent = `${modalState.currentIndex + 1} / ${modalState.images.length}`;
        }

        loadWarehouse();
    </script>
</Layout>
