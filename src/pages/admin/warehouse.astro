---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Admin - Warehouse Management">
    <div class="space-y-8">
        <!-- Header -->
        <div class="flex items-center justify-between flex-wrap gap-4">
            <div>
                <h1 class="text-4xl md:text-5xl font-bold mb-2">Warehouse Management</h1>
                <p class="text-white/70">Edit warehouse categories and items</p>
            </div>
            <div class="flex gap-4">
                <a href="/warehouse" class="px-4 py-2 bg-slate-700 hover:bg-slate-600 rounded-lg transition-colors">
                    View Warehouse
                </a>
                <button id="saveBtn" class="px-4 py-2 bg-primary hover:bg-primary/80 rounded-lg transition-colors font-semibold">
                    Save Changes
                </button>
            </div>
        </div>

        <!-- Status Messages -->
        <div id="statusMessage" class="hidden rounded-lg p-4 border">
        </div>

        <!-- Add New Category Button -->
        <button id="addCategoryBtn" class="w-full py-4 border-2 border-dashed border-white/30 rounded-lg hover:border-primary hover:bg-white/5 transition-colors text-white/70 hover:text-white">
            + Add New Category
        </button>

        <!-- Categories List -->
        <div id="categoriesList" class="space-y-6">
            <div class="text-center py-12 text-white/60">
                Loading warehouse data...
            </div>
        </div>
    </div>

    <script type="module">
        const icons = ['vehicle', 'firearm', 'communication', 'protection', 'investigation', 'traffic'];
        const statusOptions = ['available', 'limited', 'out'];

        let warehouseData = [];
        let imageCache = {}; // Cache for loaded images
        const MAX_IMAGES_PER_VEHICLE = 10;

        // Load warehouse data
        async function loadWarehouse() {
            try {
                const response = await fetch('/api/warehouse');
                const data = await response.json();
                warehouseData = data.warehouse || [];

                // Load images for categories that have imageKeys
                await loadImages();

                renderCategories();
            } catch (error) {
                console.error('Failed to load warehouse:', error);
                showStatus('Failed to load warehouse data', 'error');
            }
        }

        // Load images from the separate image store
        async function loadImages() {
            // Collect all image keys from both single imageKey and multiple imageKeys
            const allImageKeys = [];
            for (const cat of warehouseData) {
                if (cat.imageKeys && cat.imageKeys.length > 0) {
                    for (const key of cat.imageKeys) {
                        if (!imageCache[key]) {
                            allImageKeys.push(key);
                        }
                    }
                } else if (cat.imageKey && !imageCache[cat.imageKey]) {
                    allImageKeys.push(cat.imageKey);
                }
            }

            const imagePromises = allImageKeys.map(async (key) => {
                try {
                    const response = await fetch(`/api/warehouse?image=${encodeURIComponent(key)}`);
                    const data = await response.json();
                    if (data.image) {
                        imageCache[key] = data.image;
                    }
                } catch (e) {
                    console.error('Failed to load image:', key, e);
                }
            });
            await Promise.all(imagePromises);
        }

        function showStatus(message, type = 'success') {
            const statusEl = document.getElementById('statusMessage');
            statusEl.textContent = message;
            statusEl.className = `rounded-lg p-4 border ${type === 'error' ? 'bg-red-500/20 border-red-500/50 text-red-200' : 'bg-green-500/20 border-green-500/50 text-green-200'}`;
            statusEl.classList.remove('hidden');
            setTimeout(() => statusEl.classList.add('hidden'), 5000);
        }

        function generateId(name) {
            return name.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/(^-|-$)/g, '');
        }

        function renderCategories() {
            const container = document.getElementById('categoriesList');

            if (warehouseData.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-12 text-white/60">
                        No categories found. Add your first category above.
                    </div>
                `;
                return;
            }

            container.innerHTML = warehouseData.map((category, catIndex) => {
                // Get images from cache - support both single imageKey and multiple imageKeys
                const imageKeys = category.imageKeys || (category.imageKey ? [category.imageKey] : []);
                // Include pending images (new uploads not yet saved)
                const pendingImages = category.images || [];
                const allImages = [...imageKeys.map(key => ({ type: 'key', value: key, src: imageCache[key] || '' }))];
                // Add pending base64 images
                for (const img of pendingImages) {
                    if (img && img.startsWith('data:')) {
                        allImages.push({ type: 'new', value: img, src: img });
                    }
                }
                const hasImages = allImages.length > 0;
                const canAddMore = allImages.length < MAX_IMAGES_PER_VEHICLE;

                return `
                <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20" data-category-index="${catIndex}">
                    <!-- Category Header -->
                    <div class="flex items-start gap-4 mb-6">
                        <div class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center flex-shrink-0">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                            </svg>
                        </div>

                        <!-- Category Info -->
                        <div class="flex-grow space-y-4">
                            <div class="flex gap-4 flex-wrap">
                                <div class="flex-grow">
                                    <label class="block text-sm font-medium text-slate-300 mb-1">Category Name</label>
                                    <input type="text" value="${category.name}" class="category-name w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:ring-2 focus:ring-primary focus:border-transparent" data-category-index="${catIndex}">
                                </div>
                                <div class="w-40">
                                    <label class="block text-sm font-medium text-slate-300 mb-1">Icon</label>
                                    <select class="category-icon w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:ring-2 focus:ring-primary focus:border-transparent" data-category-index="${catIndex}">
                                        ${icons.map(icon => `<option value="${icon}" ${category.icon === icon ? 'selected' : ''}>${icon}</option>`).join('')}
                                    </select>
                                </div>
                            </div>

                            <!-- Multiple Images Upload Section -->
                            <div class="border border-slate-600 rounded-lg p-4 bg-slate-700/30">
                                <div class="flex items-center justify-between mb-3">
                                    <label class="block text-sm font-medium text-slate-300">Vehicle Images (${allImages.length}/${MAX_IMAGES_PER_VEHICLE})</label>
                                    ${canAddMore ? `
                                        <label class="add-image-btn px-3 py-1.5 bg-primary hover:bg-primary/80 rounded-lg cursor-pointer text-sm font-medium transition-colors">
                                            + Add Image
                                            <input type="file" accept="image/*" class="image-upload hidden" data-category-index="${catIndex}">
                                        </label>
                                    ` : `
                                        <span class="text-sm text-yellow-400">Max images reached</span>
                                    `}
                                </div>
                                ${hasImages ? `
                                    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-3">
                                        ${allImages.map((img, imgIndex) => `
                                            <div class="relative group">
                                                <img src="${img.src}" alt="Vehicle image ${imgIndex + 1}" class="w-full h-24 object-cover rounded-lg border border-slate-600">
                                                <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity rounded-lg flex items-center justify-center">
                                                    <button class="remove-single-image p-1.5 bg-red-500 hover:bg-red-600 rounded-full text-white transition-colors" data-category-index="${catIndex}" data-image-index="${imgIndex}" data-image-key="${img.type === 'key' ? img.value : ''}" title="Remove image">
                                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                                        </svg>
                                                    </button>
                                                </div>
                                                <span class="absolute bottom-1 left-1 bg-black/70 text-white text-xs px-1.5 py-0.5 rounded">${imgIndex + 1}</span>
                                            </div>
                                        `).join('')}
                                    </div>
                                ` : `
                                    <div class="text-center py-6 text-white/50 border-2 border-dashed border-slate-600 rounded-lg">
                                        <p class="text-sm">No images uploaded yet</p>
                                        <p class="text-xs mt-1">Add up to ${MAX_IMAGES_PER_VEHICLE} images per vehicle</p>
                                    </div>
                                `}
                            </div>

                            <button class="delete-category text-red-400 hover:text-red-300 text-sm" data-category-index="${catIndex}">
                                Delete Category
                            </button>
                        </div>
                    </div>

                    <!-- Items Section -->
                    <div class="border-t border-white/10 pt-4">
                        <h3 class="font-semibold text-lg mb-3">Items</h3>
                        <div class="space-y-2 items-list" data-category-index="${catIndex}">
                            ${category.items.map((item, itemIndex) => `
                                <div class="flex gap-3 items-center">
                                    <input type="text" value="${item.name}" class="item-name flex-grow px-3 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white text-sm focus:ring-2 focus:ring-primary focus:border-transparent" data-category-index="${catIndex}" data-item-index="${itemIndex}">
                                    <select class="item-status w-32 px-3 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white text-sm focus:ring-2 focus:ring-primary focus:border-transparent" data-category-index="${catIndex}" data-item-index="${itemIndex}">
                                        ${statusOptions.map(status => `<option value="${status}" ${item.status === status ? 'selected' : ''}>${status}</option>`).join('')}
                                    </select>
                                    <button class="delete-item text-red-400 hover:text-red-300 p-2" data-category-index="${catIndex}" data-item-index="${itemIndex}">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                        </svg>
                                    </button>
                                </div>
                            `).join('')}
                        </div>
                        <button class="add-item mt-3 text-primary hover:text-primary/80 text-sm font-medium" data-category-index="${catIndex}">
                            + Add Item
                        </button>
                    </div>
                </div>
            `;}).join('');

            attachEventListeners();
        }

        function attachEventListeners() {
            // Category name changes
            document.querySelectorAll('.category-name').forEach(input => {
                input.addEventListener('change', (e) => {
                    const index = parseInt(e.target.dataset.categoryIndex);
                    warehouseData[index].name = e.target.value;
                    warehouseData[index].id = generateId(e.target.value);
                });
            });

            // Category icon changes
            document.querySelectorAll('.category-icon').forEach(select => {
                select.addEventListener('change', (e) => {
                    const index = parseInt(e.target.dataset.categoryIndex);
                    warehouseData[index].icon = e.target.value;
                });
            });

            // Delete category
            document.querySelectorAll('.delete-category').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const index = parseInt(e.target.dataset.categoryIndex);
                    if (confirm('Are you sure you want to delete this category?')) {
                        warehouseData.splice(index, 1);
                        renderCategories();
                    }
                });
            });

            // Item name changes
            document.querySelectorAll('.item-name').forEach(input => {
                input.addEventListener('change', (e) => {
                    const catIndex = parseInt(e.target.dataset.categoryIndex);
                    const itemIndex = parseInt(e.target.dataset.itemIndex);
                    warehouseData[catIndex].items[itemIndex].name = e.target.value;
                });
            });

            // Item status changes
            document.querySelectorAll('.item-status').forEach(select => {
                select.addEventListener('change', (e) => {
                    const catIndex = parseInt(e.target.dataset.categoryIndex);
                    const itemIndex = parseInt(e.target.dataset.itemIndex);
                    warehouseData[catIndex].items[itemIndex].status = e.target.value;
                });
            });

            // Delete item
            document.querySelectorAll('.delete-item').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const catIndex = parseInt(e.target.closest('[data-category-index]').dataset.categoryIndex);
                    const itemIndex = parseInt(e.target.closest('[data-item-index]').dataset.itemIndex);
                    warehouseData[catIndex].items.splice(itemIndex, 1);
                    renderCategories();
                });
            });

            // Add item
            document.querySelectorAll('.add-item').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const catIndex = parseInt(e.target.dataset.categoryIndex);
                    warehouseData[catIndex].items.push({ name: 'New Item', status: 'available' });
                    renderCategories();
                });
            });

            // Image upload - now adds to images array
            document.querySelectorAll('.image-upload').forEach(input => {
                input.addEventListener('change', (e) => {
                    const catIndex = parseInt(e.target.dataset.categoryIndex);
                    const file = e.target.files[0];
                    if (file) {
                        const reader = new FileReader();
                        reader.onload = (event) => {
                            // Initialize images array if not exists
                            if (!warehouseData[catIndex].images) {
                                warehouseData[catIndex].images = [];
                            }
                            // Check current total images count
                            const existingImageKeys = warehouseData[catIndex].imageKeys || (warehouseData[catIndex].imageKey ? [warehouseData[catIndex].imageKey] : []);
                            const pendingImages = warehouseData[catIndex].images || [];
                            const totalImages = existingImageKeys.length + pendingImages.length;

                            if (totalImages < MAX_IMAGES_PER_VEHICLE) {
                                warehouseData[catIndex].images.push(event.target.result);
                                renderCategories();
                            } else {
                                showStatus(`Maximum of ${MAX_IMAGES_PER_VEHICLE} images allowed per vehicle`, 'error');
                            }
                        };
                        reader.readAsDataURL(file);
                    }
                });
            });

            // Remove single image from gallery
            document.querySelectorAll('.remove-single-image').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const catIndex = parseInt(e.target.closest('[data-category-index]').dataset.categoryIndex);
                    const imgIndex = parseInt(e.target.closest('[data-image-index]').dataset.imageIndex);
                    const imageKey = e.target.closest('[data-image-key]').dataset.imageKey;

                    const category = warehouseData[catIndex];
                    const imageKeys = category.imageKeys || (category.imageKey ? [category.imageKey] : []);
                    const pendingImages = category.images || [];

                    // Check if removing an existing image (has imageKey) or a pending upload
                    if (imgIndex < imageKeys.length) {
                        // Removing an existing saved image
                        const keyToRemove = imageKeys[imgIndex];
                        if (!category._deleteImages) {
                            category._deleteImages = [];
                        }
                        category._deleteImages.push(keyToRemove);

                        // Remove from imageKeys
                        if (category.imageKeys) {
                            category.imageKeys.splice(imgIndex, 1);
                        } else if (category.imageKey) {
                            delete category.imageKey;
                            category.imageKeys = [];
                        }
                    } else {
                        // Removing a pending (not yet saved) image
                        const pendingIndex = imgIndex - imageKeys.length;
                        if (category.images && pendingIndex >= 0 && pendingIndex < category.images.length) {
                            category.images.splice(pendingIndex, 1);
                        }
                    }

                    renderCategories();
                });
            });
        }

        // Add new category
        document.getElementById('addCategoryBtn').addEventListener('click', () => {
            const newCategory = {
                id: 'new-category-' + Date.now(),
                name: 'New Category',
                icon: 'vehicle',
                items: [{ name: 'New Item', status: 'available' }]
            };
            warehouseData.push(newCategory);
            renderCategories();
        });

        // Save changes
        document.getElementById('saveBtn').addEventListener('click', async () => {
            const saveBtn = document.getElementById('saveBtn');
            saveBtn.disabled = true;
            saveBtn.textContent = 'Saving...';

            try {
                const response = await fetch('/api/warehouse', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ warehouse: warehouseData })
                });

                const result = await response.json();

                if (result.success) {
                    showStatus('Changes saved successfully!', 'success');
                } else {
                    showStatus(result.error || 'Failed to save changes', 'error');
                }
            } catch (error) {
                console.error('Save error:', error);
                showStatus('Failed to save changes', 'error');
            } finally {
                saveBtn.disabled = false;
                saveBtn.textContent = 'Save Changes';
            }
        });

        // Initialize
        loadWarehouse();
    </script>
</Layout>
