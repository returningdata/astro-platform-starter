---
import Layout from '../layouts/Layout.astro';
import { changeLogs } from '../data/changelogs';

// Sort change logs by date (newest first)
const sortedChangeLogs = [...changeLogs].sort((a, b) =>
  new Date(b.date).getTime() - new Date(a.date).getTime()
);

// Helper function to format date
function formatDate(dateStr: string) {
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

// Helper function to get category color and icon
function getCategoryStyle(category: string) {
  const styles = {
    feature: {
      color: 'bg-green-500/20 text-green-400 border-green-500/30',
      icon: 'M12 4v16m8-8H4'
    },
    improvement: {
      color: 'bg-blue-500/20 text-blue-400 border-blue-500/30',
      icon: 'M13 7h8m0 0v8m0-8l-8 8-4-4-6 6'
    },
    bugfix: {
      color: 'bg-red-500/20 text-red-400 border-red-500/30',
      icon: 'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z'
    },
    content: {
      color: 'bg-purple-500/20 text-purple-400 border-purple-500/30',
      icon: 'M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z'
    },
    security: {
      color: 'bg-yellow-500/20 text-yellow-400 border-yellow-500/30',
      icon: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z'
    }
  };
  return styles[category as keyof typeof styles] || styles.content;
}
---

<Layout title="Change Logs - Del Perro Police Department">
    <div class="space-y-12">
        <!-- Page Header -->
        <div class="text-center space-y-4">
            <h1 class="mb-6 text-5xl md:text-6xl">Change Logs</h1>
            <p class="text-xl text-white/80 max-w-3xl mx-auto">
                Track updates, improvements, and changes to the DPPD Officer Hub
            </p>
        </div>

        <!-- Information Notice -->
        <div class="bg-blue-500/20 backdrop-blur-sm rounded-lg p-6 border border-blue-500/30">
            <div class="flex items-start gap-3">
                <svg class="w-6 h-6 text-blue-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div>
                    <h3 class="font-semibold text-lg mb-1">Manual Change Log Management</h3>
                    <p class="text-white/80 text-sm">
                        Change logs are managed through the repository. To add new entries, edit the <code class="bg-white/10 px-2 py-0.5 rounded">src/data/changelogs.ts</code> file.
                    </p>
                </div>
            </div>
        </div>

        <!-- Change Logs Timeline -->
        <div class="space-y-6">
            {sortedChangeLogs.map((log, index) => {
              const style = getCategoryStyle(log.category);
              return (
                <div class="bg-white/10 backdrop-blur-sm rounded-lg border border-white/20 overflow-hidden">
                    <!-- Header -->
                    <div class="p-6 border-b border-white/20">
                        <div class="flex flex-wrap items-start justify-between gap-4">
                            <div class="flex-1">
                                <div class="flex items-center gap-3 mb-2">
                                    <span class="px-3 py-1 bg-primary rounded-lg font-bold text-lg">
                                        v{log.version}
                                    </span>
                                    <span class={`px-3 py-1 rounded-full text-xs font-semibold uppercase border ${style.color}`}>
                                        {log.category}
                                    </span>
                                </div>
                                <h3 class="text-2xl font-bold mb-2">{log.title}</h3>
                                <p class="text-white/70">{log.description}</p>
                            </div>
                            <div class="text-right">
                                <div class="text-sm text-white/60">{formatDate(log.date)}</div>
                            </div>
                        </div>
                    </div>

                    <!-- Changes List -->
                    <div class="p-6">
                        <h4 class="text-lg font-semibold mb-4">Changes:</h4>
                        <ul class="space-y-2">
                            {log.changes.map(change => (
                                <li class="flex items-start gap-3">
                                    <svg class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    <span class="text-white/80">{change}</span>
                                </li>
                            ))}
                        </ul>
                    </div>
                </div>
              );
            })}
        </div>

        <!-- Legend -->
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20">
            <h2 class="text-xl font-bold mb-4">Category Legend</h2>
            <div class="grid grid-cols-2 md:grid-cols-5 gap-3">
                <div class="flex items-center gap-2">
                    <span class="px-2 py-1 rounded-full text-xs font-semibold uppercase border bg-green-500/20 text-green-400 border-green-500/30">
                        Feature
                    </span>
                    <span class="text-sm text-white/70">New</span>
                </div>
                <div class="flex items-center gap-2">
                    <span class="px-2 py-1 rounded-full text-xs font-semibold uppercase border bg-blue-500/20 text-blue-400 border-blue-500/30">
                        Improvement
                    </span>
                    <span class="text-sm text-white/70">Enhanced</span>
                </div>
                <div class="flex items-center gap-2">
                    <span class="px-2 py-1 rounded-full text-xs font-semibold uppercase border bg-red-500/20 text-red-400 border-red-500/30">
                        Bugfix
                    </span>
                    <span class="text-sm text-white/70">Fixed</span>
                </div>
                <div class="flex items-center gap-2">
                    <span class="px-2 py-1 rounded-full text-xs font-semibold uppercase border bg-purple-500/20 text-purple-400 border-purple-500/30">
                        Content
                    </span>
                    <span class="text-sm text-white/70">Updated</span>
                </div>
                <div class="flex items-center gap-2">
                    <span class="px-2 py-1 rounded-full text-xs font-semibold uppercase border bg-yellow-500/20 text-yellow-400 border-yellow-500/30">
                        Security
                    </span>
                    <span class="text-sm text-white/70">Secured</span>
                </div>
            </div>
        </div>

        <!-- How to Add Change Logs -->
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-8 border border-white/20">
            <h2 class="text-2xl font-bold mb-4">How to Add Change Logs</h2>
            <p class="text-white/80 mb-4">
                To add new change logs to this page:
            </p>
            <ol class="list-decimal list-inside space-y-2 text-white/80 mb-6">
                <li>Navigate to <code class="bg-white/10 px-2 py-0.5 rounded">src/data/changelogs.ts</code> in the repository</li>
                <li>Add a new entry to the <code class="bg-white/10 px-2 py-0.5 rounded">changeLogs</code> array</li>
                <li>Include version number, date, category, title, description, and list of changes</li>
                <li>Commit and push your changes</li>
                <li>The site will automatically rebuild with your new change log</li>
            </ol>
            <div class="p-4 bg-white/5 rounded-lg border border-white/10">
                <p class="text-sm text-white/70 font-mono mb-2">Example:</p>
                <pre class="text-xs text-white/70 overflow-x-auto"><code>{`{
  id: '3',
  version: '1.1.0',
  date: '2025-12-01',
  category: 'feature',
  title: 'New Feature Title',
  description: 'Brief description of the update',
  changes: [
    'First change made',
    'Second change made',
    'Third change made'
  ]
}`}</code></pre>
            </div>
            <div class="mt-4 text-sm text-white/60">
                <strong>Categories:</strong> feature, improvement, bugfix, content, security
            </div>
        </div>
    </div>
</Layout>
