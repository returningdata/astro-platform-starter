---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Admin Dashboard - DPPD">
    <div class="space-y-8">
        <!-- Header -->
        <div>
            <h1 class="text-4xl md:text-5xl font-bold mb-2">Admin Dashboard</h1>
            <p class="text-white/70">Del Perro Police Department Administration</p>
        </div>

        <!-- Content Management -->
        <div class="space-y-4">
            <h2 class="text-2xl font-bold text-white/90">Content Management</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Warehouse Management -->
                <a href="/admin/warehouse" class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20 hover:bg-white/15 hover:border-primary transition-all group">
                    <div class="flex items-center gap-4 mb-4">
                        <div class="w-14 h-14 bg-primary rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                            </svg>
                        </div>
                        <div>
                            <h2 class="text-xl font-bold">Warehouse</h2>
                            <p class="text-white/60 text-sm">Manage inventory & images</p>
                        </div>
                    </div>
                    <p class="text-white/70 text-sm">Edit warehouse categories, add or remove items, and upload images for each category.</p>
                </a>

                <!-- Events Management -->
                <a href="/admin/events" class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20 hover:bg-white/15 hover:border-primary transition-all group">
                    <div class="flex items-center gap-4 mb-4">
                        <div class="w-14 h-14 bg-green-600 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                        </div>
                        <div>
                            <h2 class="text-xl font-bold">Events</h2>
                            <p class="text-white/60 text-sm">Manage community events</p>
                        </div>
                    </div>
                    <p class="text-white/70 text-sm">Add, edit, or remove community events. Set dates, locations, and event status.</p>
                </a>

                <!-- Resources Management -->
                <a href="/admin/resources" class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20 hover:bg-white/15 hover:border-primary transition-all group">
                    <div class="flex items-center gap-4 mb-4">
                        <div class="w-14 h-14 bg-blue-600 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                        </div>
                        <div>
                            <h2 class="text-xl font-bold">Resources</h2>
                            <p class="text-white/60 text-sm">Manage department resources</p>
                        </div>
                    </div>
                    <p class="text-white/70 text-sm">Edit department documents and resource links. Add or update official document URLs.</p>
                </a>

                <!-- Uniforms Management -->
                <a href="/admin/uniforms" class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20 hover:bg-white/15 hover:border-primary transition-all group">
                    <div class="flex items-center gap-4 mb-4">
                        <div class="w-14 h-14 bg-purple-600 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                        </div>
                        <div>
                            <h2 class="text-xl font-bold">Uniforms</h2>
                            <p class="text-white/60 text-sm">Manage uniform inventory</p>
                        </div>
                    </div>
                    <p class="text-white/70 text-sm">Add, edit, or remove uniform categories and items. Track availability status.</p>
                </a>

                <!-- Theme Settings -->
                <a href="/admin/theme-settings" class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20 hover:bg-white/15 hover:border-primary transition-all group">
                    <div class="flex items-center gap-4 mb-4">
                        <div class="w-14 h-14 bg-gradient-to-br from-orange-500 via-green-600 to-blue-600 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
                            </svg>
                        </div>
                        <div>
                            <h2 class="text-xl font-bold">Theme Settings</h2>
                            <p class="text-white/60 text-sm">Seasonal themes & effects</p>
                        </div>
                    </div>
                    <p class="text-white/70 text-sm">Switch between Christmas, Halloween, and Default themes. Customize effects and music.</p>
                </a>

                <!-- Department Data Management -->
                <a href="/admin/department-data" class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20 hover:bg-white/15 hover:border-primary transition-all group">
                    <div class="flex items-center gap-4 mb-4">
                        <div class="w-14 h-14 bg-gradient-to-br from-teal-500 to-yellow-500 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                            </svg>
                        </div>
                        <div>
                            <h2 class="text-xl font-bold">Department Data</h2>
                            <p class="text-white/60 text-sm">Awards & Chain of Command</p>
                        </div>
                    </div>
                    <p class="text-white/70 text-sm">Manage award recipients and assign names to high command positions with call signs.</p>
                </a>

                <!-- Subdivisions Management -->
                <a href="/admin/subdivisions" class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20 hover:bg-white/15 hover:border-primary transition-all group">
                    <div class="flex items-center gap-4 mb-4">
                        <div class="w-14 h-14 bg-gradient-to-br from-cyan-500 to-blue-600 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                            </svg>
                        </div>
                        <div>
                            <h2 class="text-xl font-bold">Subdivisions</h2>
                            <p class="text-white/60 text-sm">Manage division availability</p>
                        </div>
                    </div>
                    <p class="text-white/70 text-sm">Edit subdivisions and set their availability status (Tryouts, Open, Handpicked, Closed).</p>
                </a>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="space-y-4">
            <h2 class="text-2xl font-bold text-white/90">Quick Actions</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- View Site -->
                <a href="/" class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20 hover:bg-white/15 hover:border-primary transition-all group">
                    <div class="flex items-center gap-4 mb-4">
                        <div class="w-14 h-14 bg-slate-600 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                            </svg>
                        </div>
                        <div>
                            <h2 class="text-xl font-bold">View Site</h2>
                            <p class="text-white/60 text-sm">Go to public site</p>
                        </div>
                    </div>
                    <p class="text-white/70 text-sm">View the public-facing website to see how your changes appear to visitors.</p>
                </a>

                <!-- Logout -->
                <a href="/admin/login" class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20 hover:bg-white/15 hover:border-red-500 transition-all group">
                    <div class="flex items-center gap-4 mb-4">
                        <div class="w-14 h-14 bg-red-500/50 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                            </svg>
                        </div>
                        <div>
                            <h2 class="text-xl font-bold">Logout</h2>
                            <p class="text-white/60 text-sm">End your session</p>
                        </div>
                    </div>
                    <p class="text-white/70 text-sm">Log out of the admin panel and return to the login page.</p>
                </a>
            </div>
        </div>
    </div>
</Layout>
