                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                </svg>
                            </div>
                            <div class="flex-1 min-w-0">
                                <div class="text-xs font-medium text-white truncate">${l.name}</div>
                                ${l.jobTitle ? `<div class="text-[10px] text-rose-400/70 truncate">${l.jobTitle}</div>` : ''}
                            </div>
                            ${l.isLOA ? '<span class="px-1 py-0.5 text-[8px] font-bold bg-yellow-500 text-black rounded flex-shrink-0">LOA</span>' : ''}
                        </div>
                    `).join('');
                }

                // Populate Chief of Police section
                const chiefSection = document.getElementById('chiefSection');
                const chiefCard = document.getElementById('chiefCard');
                if (chief && chiefSection && chiefCard) {
                    chiefSection.classList.remove('hidden');
                    chiefCard.innerHTML = `
                        <div class="flex items-center gap-2">
                            <div class="w-8 h-8 bg-teal-500/20 rounded-full flex items-center justify-center flex-shrink-0">
                                <svg class="w-4 h-4 text-teal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                </svg>
                            </div>
                            <div class="flex-1 min-w-0">
                                <div class="text-sm font-bold text-white truncate">${chief.name}</div>
                                ${chief.callSign ? `<div class="text-[10px] text-teal-400 font-mono">${chief.callSign}</div>` : ''}
                                ${chief.jobTitle ? `<div class="text-[10px] text-white/50 truncate">${chief.jobTitle}</div>` : ''}
                            </div>
                            ${chief.isLOA ? '<span class="px-1.5 py-0.5 text-[9px] font-bold bg-yellow-500 text-black rounded flex-shrink-0">LOA</span>' : ''}
