    <script type="module">
        // Validate session
        async function validateSession() {
            try {
                const response = await fetch('/api/auth/session', { credentials: 'include' });
                const data = await response.json();
                if (!data.authenticated) {
                    window.location.href = '/admin/login';
                    return null;
                }
                // Check permission
                if (data.user.role !== 'super_admin' && !data.user.permissions?.includes('intel-management')) {
                    window.location.href = '/admin';
                    return null;
                }
                return data.user;
            } catch (error) {
                window.location.href = '/admin/login';
                return null;
            }
        }

        // Tab management
        const tabs = {
            threads: { tab: document.getElementById('threadsTab'), panel: document.getElementById('threadsPanel') },
            users: { tab: document.getElementById('usersTab'), panel: document.getElementById('usersPanel') },
            logs: { tab: document.getElementById('logsTab'), panel: document.getElementById('logsPanel') },
        };

        function switchTab(tabName) {
            Object.entries(tabs).forEach(([name, { tab, panel }]) => {
                if (name === tabName) {
                    tab.classList.add('border-primary', 'text-primary');
                    tab.classList.remove('border-transparent', 'text-white/60');
                    panel.classList.remove('hidden');
                } else {
                    tab.classList.remove('border-primary', 'text-primary');
                    tab.classList.add('border-transparent', 'text-white/60');
                    panel.classList.add('hidden');
                }
            });

            if (tabName === 'users') loadUsers();
            if (tabName === 'logs') loadLogs();
        }

        tabs.threads.tab.addEventListener('click', () => switchTab('threads'));
        tabs.users.tab.addEventListener('click', () => switchTab('users'));
        tabs.logs.tab.addEventListener('click', () => switchTab('logs'));

        // Threads management
        let currentThreads = [];

        async function loadThreads() {
            try {
                const response = await fetch('/api/intel/threads', { credentials: 'include' });
                const data = await response.json();

                if (data.error) throw new Error(data.error);

                currentThreads = data.threads || [];
                renderThreads();
            } catch (error) {
                console.error('Error loading threads:', error);
                document.getElementById('threadsList').innerHTML = `
                    <div class="text-center py-12 text-red-400">
                        <p>Error loading threads: ${error.message}</p>
                    </div>
                `;
            }
        }

        function renderThreads() {
            const container = document.getElementById('threadsList');

            if (currentThreads.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-12 text-white/60">
                        <p>No threads yet. Create your first intel thread.</p>
                    </div>
                `;
                return;
            }

            const categoryColors = {
                gang: 'bg-red-500/20 text-red-300',
                cartel: 'bg-orange-500/20 text-orange-300',
                militia: 'bg-yellow-500/20 text-yellow-300',
                crime_family: 'bg-purple-500/20 text-purple-300',
                motorcycle_club: 'bg-blue-500/20 text-blue-300',
                other: 'bg-gray-500/20 text-gray-300',
            };

            const clearanceColors = {
                public_trust: 'bg-green-500/20 text-green-300',
                confidential: 'bg-cyan-500/20 text-cyan-300',
                secret: 'bg-blue-500/20 text-blue-300',
                top_secret: 'bg-orange-500/20 text-orange-300',
                top_secret_sci: 'bg-purple-500/20 text-purple-300',
                special_access: 'bg-pink-500/20 text-pink-300',
            };

            const clearanceDisplayNames = {
                public_trust: 'Public Trust',
                confidential: 'Confidential',
                secret: 'Secret',
                top_secret: 'Top Secret',
                top_secret_sci: 'TS/SCI',
                special_access: 'Special Access'
            };

            container.innerHTML = currentThreads.map(thread => `
                <div class="bg-slate-800/50 rounded-lg border border-slate-700 p-4 hover:bg-slate-800/70 transition-colors">
                    <div class="flex justify-between items-start">
                        <div class="flex-1">
                            <div class="flex items-center gap-2 mb-2">
                                ${thread.isPinned ? '<span class="text-yellow-400" title="Pinned">ðŸ“Œ</span>' : ''}
                                ${thread.isLocked ? '<span class="text-red-400" title="Locked">ðŸ”’</span>' : ''}
                                <h3 class="font-semibold text-lg">${thread.title}</h3>
                            </div>
                            <p class="text-white/70 text-sm mb-3">${thread.description}</p>
                            <div class="flex items-center gap-2 flex-wrap">
                                <span class="px-2 py-1 rounded text-xs font-medium ${categoryColors[thread.category] || 'bg-gray-500/20 text-gray-300'}">${thread.category}</span>
                                <span class="px-2 py-1 rounded text-xs font-medium ${clearanceColors[thread.requiredClearance] || 'bg-gray-500/20 text-gray-300'}">${clearanceDisplayNames[thread.requiredClearance] || thread.requiredClearance}</span>
                                <span class="text-white/50 text-xs">${thread.postCount || 0} posts</span>
                                <span class="text-white/50 text-xs">by ${thread.createdBy}</span>
                            </div>
                        </div>
                        <div class="flex gap-2 ml-4">
                            <button onclick="viewThread('${thread.id}')" class="p-2 bg-blue-500/20 hover:bg-blue-500/30 rounded-lg transition-colors" title="View Posts">
                                <svg class="w-4 h-4 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                </svg>
                            </button>
                            <button onclick="editThread('${thread.id}')" class="p-2 bg-yellow-500/20 hover:bg-yellow-500/30 rounded-lg transition-colors" title="Edit">
                                <svg class="w-4 h-4 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                </svg>
                            </button>
                            <button onclick="deleteThread('${thread.id}')" class="p-2 bg-red-500/20 hover:bg-red-500/30 rounded-lg transition-colors" title="Delete">
                                <svg class="w-4 h-4 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        // Thread Modal
        const threadModal = document.getElementById('threadModal');
        const threadForm = document.getElementById('threadForm');
        const threadOptions = document.getElementById('threadOptions');

        document.getElementById('createThreadBtn').addEventListener('click', () => {
            document.getElementById('threadModalTitle').textContent = 'Create Thread';
            document.getElementById('threadId').value = '';
            threadForm.reset();
            threadOptions.classList.add('hidden');
            threadModal.classList.remove('hidden');
        });

        document.getElementById('cancelThreadBtn').addEventListener('click', () => {
            threadModal.classList.add('hidden');
        });

        window.editThread = function(id) {
            const thread = currentThreads.find(t => t.id === id);
            if (!thread) return;

            document.getElementById('threadModalTitle').textContent = 'Edit Thread';
            document.getElementById('threadId').value = thread.id;
            document.getElementById('threadTitle').value = thread.title;
            document.getElementById('threadDescription').value = thread.description;
            document.getElementById('threadCategory').value = thread.category;
            document.getElementById('threadClearance').value = thread.requiredClearance;
            document.getElementById('threadImage').value = thread.image || '';
            document.getElementById('threadPinned').checked = thread.isPinned;
            document.getElementById('threadLocked').checked = thread.isLocked;
            threadOptions.classList.remove('hidden');
            threadModal.classList.remove('hidden');
        };

        window.deleteThread = async function(id) {
            if (!confirm('Are you sure you want to delete this thread? All posts will be deleted.')) return;

            try {
                const response = await fetch(`/api/intel/threads?id=${id}`, {
                    method: 'DELETE',
                    credentials: 'include'
                });
                const data = await response.json();
                if (data.error) throw new Error(data.error);
                loadThreads();
            } catch (error) {
                alert('Error deleting thread: ' + error.message);
            }
        };

        threadForm.addEventListener('submit', async (e) => {
            e.preventDefault();

            const id = document.getElementById('threadId').value;
            const payload = {
                id: id || undefined,
                title: document.getElementById('threadTitle').value,
                description: document.getElementById('threadDescription').value,
                category: document.getElementById('threadCategory').value,
                requiredClearance: document.getElementById('threadClearance').value,
                image: document.getElementById('threadImage').value || undefined,
                isPinned: document.getElementById('threadPinned').checked,
                isLocked: document.getElementById('threadLocked').checked,
            };

            try {
                const response = await fetch('/api/intel/threads', {
                    method: id ? 'PUT' : 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload),
                    credentials: 'include'
                });
                const data = await response.json();
                if (data.error) throw new Error(data.error);

                threadModal.classList.add('hidden');
                loadThreads();
            } catch (error) {
                alert('Error saving thread: ' + error.message);
            }
        });

        // Thread Detail Modal
        let currentDetailThread = null;
        let currentDetailTab = 'posts';

        // Detail tab management
        const detailTabs = {
            posts: { tab: document.getElementById('detailPostsTab'), panel: document.getElementById('detailPostsPanel') },
            people: { tab: document.getElementById('detailPeopleTab'), panel: document.getElementById('detailPeoplePanel') },
            locations: { tab: document.getElementById('detailLocationsTab'), panel: document.getElementById('detailLocationsPanel') },
            vehicles: { tab: document.getElementById('detailVehiclesTab'), panel: document.getElementById('detailVehiclesPanel') },
        };

        function switchDetailTab(tabName) {
            currentDetailTab = tabName;
            Object.entries(detailTabs).forEach(([name, { tab, panel }]) => {
                if (name === tabName) {
                    tab.classList.add('border-primary', 'text-primary');
                    tab.classList.remove('border-transparent', 'text-white/60');
                    panel.classList.remove('hidden');
                } else {
                    tab.classList.remove('border-primary', 'text-primary');
                    tab.classList.add('border-transparent', 'text-white/60');
                    panel.classList.add('hidden');
                }
            });

            if (currentDetailThread) {
                if (tabName === 'people') loadPeople(currentDetailThread.id);
                if (tabName === 'locations') loadLocations(currentDetailThread.id);
                if (tabName === 'vehicles') loadVehicles(currentDetailThread.id);
            }
        }

        detailTabs.posts.tab.addEventListener('click', () => switchDetailTab('posts'));
        detailTabs.people.tab.addEventListener('click', () => switchDetailTab('people'));
        detailTabs.locations.tab.addEventListener('click', () => switchDetailTab('locations'));
        detailTabs.vehicles.tab.addEventListener('click', () => switchDetailTab('vehicles'));

        window.viewThread = async function(id) {
            currentDetailThread = currentThreads.find(t => t.id === id);
            if (!currentDetailThread) return;

            document.getElementById('detailThreadTitle').textContent = currentDetailThread.title;
            document.getElementById('detailThreadDescription').textContent = currentDetailThread.description;
            document.getElementById('detailThreadMeta').textContent = `${currentDetailThread.category} | ${currentDetailThread.requiredClearance.replace('_', ' ')} | Created by ${currentDetailThread.createdBy}`;

            // Show/hide add post form based on locked status
            document.getElementById('addPostForm').classList.toggle('hidden', currentDetailThread.isLocked);

            // Reset to posts tab
            switchDetailTab('posts');

            await loadPosts(id);
            document.getElementById('threadDetailModal').classList.remove('hidden');
        };

        document.getElementById('closeDetailBtn').addEventListener('click', () => {
            document.getElementById('threadDetailModal').classList.add('hidden');
            currentDetailThread = null;
        });

        async function loadPosts(threadId) {
            const container = document.getElementById('postsList');
            container.innerHTML = '<p class="text-white/60 text-center">Loading posts...</p>';

            try {
                const response = await fetch(`/api/intel/posts?threadId=${threadId}`, { credentials: 'include' });
                const data = await response.json();

                if (data.error) throw new Error(data.error);

                const posts = data.posts || [];

                if (posts.length === 0) {
                    container.innerHTML = '<p class="text-white/60 text-center">No posts yet.</p>';
                    return;
                }

                container.innerHTML = posts.map(post => `
                    <div class="bg-slate-700/50 rounded-lg p-4 border border-slate-600">
                        <div class="flex justify-between items-start mb-2">
                            <div class="flex items-center gap-2">
                                <span class="font-semibold">${post.author}</span>
                                <span class="text-xs px-2 py-0.5 bg-slate-600 rounded">${post.authorRole}</span>
                            </div>
                            <div class="flex items-center gap-2">
                                <span class="text-white/50 text-xs">${new Date(post.createdAt).toLocaleString()}</span>
                                <button onclick="deletePost('${post.id}')" class="p-1 text-red-400 hover:text-red-300" title="Delete post">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                        <p class="text-white/90 whitespace-pre-wrap">${post.content}</p>
                    </div>
                `).join('');
            } catch (error) {
                container.innerHTML = `<p class="text-red-400 text-center">Error loading posts: ${error.message}</p>`;
            }
        }

        document.getElementById('submitPostBtn').addEventListener('click', async () => {
            if (!currentDetailThread) return;

            const content = document.getElementById('newPostContent').value.trim();
            if (!content) {
                alert('Please enter post content');
                return;
            }

            try {
                const response = await fetch('/api/intel/posts', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ threadId: currentDetailThread.id, content }),
                    credentials: 'include'
                });
                const data = await response.json();
                if (data.error) throw new Error(data.error);

                document.getElementById('newPostContent').value = '';
                await loadPosts(currentDetailThread.id);
                // Update thread post count in local data
                currentDetailThread.postCount = (currentDetailThread.postCount || 0) + 1;
            } catch (error) {
                alert('Error creating post: ' + error.message);
            }
        });

        window.deletePost = async function(id) {
            if (!confirm('Are you sure you want to delete this post?')) return;

            try {
                const response = await fetch(`/api/intel/posts?id=${id}`, {
                    method: 'DELETE',
                    credentials: 'include'
                });
                const data = await response.json();
                if (data.error) throw new Error(data.error);
                await loadPosts(currentDetailThread.id);
                currentDetailThread.postCount = Math.max(0, (currentDetailThread.postCount || 1) - 1);
            } catch (error) {
                alert('Error deleting post: ' + error.message);
            }
        };

        // People management
        const statusColors = {
            active: 'bg-green-500/20 text-green-300',
            inactive: 'bg-gray-500/20 text-gray-300',
            incarcerated: 'bg-orange-500/20 text-orange-300',
            deceased: 'bg-red-500/20 text-red-300',
            unknown: 'bg-slate-500/20 text-slate-300',
        };

        async function loadPeople(threadId) {
            const container = document.getElementById('peopleList');
            container.innerHTML = '<p class="text-white/60 text-center col-span-2">Loading people...</p>';

            try {
                const response = await fetch(`/api/intel/people?threadId=${threadId}`, { credentials: 'include' });
                const data = await response.json();

                if (data.error) throw new Error(data.error);

                const people = data.people || [];

                if (people.length === 0) {
                    container.innerHTML = '<p class="text-white/60 text-center col-span-2">No people added yet. Click "+ Add Person" to add someone.</p>';
                    return;
                }

                container.innerHTML = people.map(person => `
                    <div class="bg-slate-700/50 rounded-lg p-4 border border-slate-600">
                        <div class="flex gap-3">
                            ${person.photo ? `<img src="${person.photo}" alt="${person.name}" class="w-16 h-16 rounded-lg object-cover shrink-0" />` : '<div class="w-16 h-16 bg-slate-600 rounded-lg flex items-center justify-center text-2xl font-bold shrink-0">' + person.name.charAt(0).toUpperCase() + '</div>'}
                            <div class="flex-1 min-w-0">
                                <div class="flex items-center justify-between gap-2 mb-1">
                                    <h4 class="font-semibold truncate">${person.name}</h4>
                                    <div class="flex gap-1 shrink-0">
                                        <button onclick="editPerson('${person.id}')" class="p-1 text-yellow-400 hover:text-yellow-300" title="Edit">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" /></svg>
                                        </button>
                                        <button onclick="deletePerson('${person.id}')" class="p-1 text-red-400 hover:text-red-300" title="Delete">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>
                                        </button>
                                    </div>
                                </div>
                                ${person.aliases?.length ? `<p class="text-white/50 text-xs mb-1">AKA: ${person.aliases.join(', ')}</p>` : ''}
                                ${person.role ? `<p class="text-white/70 text-sm">${person.role}</p>` : ''}
                                <span class="inline-block px-2 py-0.5 rounded text-xs font-medium mt-1 ${statusColors[person.status] || statusColors.unknown}">${person.status || 'unknown'}</span>
                            </div>
                        </div>
                    </div>
                `).join('');
            } catch (error) {
                container.innerHTML = `<p class="text-red-400 text-center col-span-2">Error loading people: ${error.message}</p>`;
            }
        }

        let currentPeople = [];

        document.getElementById('addPersonBtn').addEventListener('click', () => {
            document.getElementById('personModalTitle').textContent = 'Add Person';
            document.getElementById('personId').value = '';
            document.getElementById('personForm').reset();
            document.getElementById('personModal').classList.remove('hidden');
        });

        document.getElementById('cancelPersonBtn').addEventListener('click', () => {
            document.getElementById('personModal').classList.add('hidden');
        });

        window.editPerson = async function(id) {
            try {
                const response = await fetch(`/api/intel/people?threadId=${currentDetailThread.id}`, { credentials: 'include' });
                const data = await response.json();
                const person = data.people?.find(p => p.id === id);
                if (!person) return;

                document.getElementById('personModalTitle').textContent = 'Edit Person';
                document.getElementById('personId').value = person.id;
                document.getElementById('personName').value = person.name || '';
                document.getElementById('personAliases').value = person.aliases?.join(', ') || '';
                document.getElementById('personPhoto').value = person.photo || '';
                document.getElementById('personRole').value = person.role || '';
                document.getElementById('personStatus').value = person.status || 'unknown';
                document.getElementById('personLocation').value = person.lastKnownLocation || '';
                document.getElementById('personDescription').value = person.description || '';
                document.getElementById('personNotes').value = person.notes || '';
                document.getElementById('personModal').classList.remove('hidden');
            } catch (error) {
                alert('Error loading person: ' + error.message);
            }
        };

        window.deletePerson = async function(id) {
            if (!confirm('Are you sure you want to delete this person?')) return;

            try {
                const response = await fetch(`/api/intel/people?id=${id}`, {
                    method: 'DELETE',
                    credentials: 'include'
                });
                const data = await response.json();
                if (data.error) throw new Error(data.error);
                await loadPeople(currentDetailThread.id);
            } catch (error) {
                alert('Error deleting person: ' + error.message);
            }
        };

        document.getElementById('personForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const id = document.getElementById('personId').value;
            const aliasesStr = document.getElementById('personAliases').value;
            const aliases = aliasesStr ? aliasesStr.split(',').map(a => a.trim()).filter(a => a) : [];

            const payload = {
                id: id || undefined,
                threadId: currentDetailThread.id,
                name: document.getElementById('personName').value,
                aliases,
                photo: document.getElementById('personPhoto').value,
                role: document.getElementById('personRole').value,
                status: document.getElementById('personStatus').value,
                lastKnownLocation: document.getElementById('personLocation').value,
                description: document.getElementById('personDescription').value,
                notes: document.getElementById('personNotes').value,
            };

            try {
                const response = await fetch('/api/intel/people', {
                    method: id ? 'PUT' : 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload),
                    credentials: 'include'
                });
                const data = await response.json();
                if (data.error) throw new Error(data.error);

                document.getElementById('personModal').classList.add('hidden');
                await loadPeople(currentDetailThread.id);
            } catch (error) {
                alert('Error saving person: ' + error.message);
            }
        });

        // Locations management
        const locationTypeColors = {
            headquarters: 'bg-red-500/20 text-red-300',
            safehouse: 'bg-yellow-500/20 text-yellow-300',
            meetup: 'bg-blue-500/20 text-blue-300',
            stash: 'bg-orange-500/20 text-orange-300',
            business: 'bg-green-500/20 text-green-300',
            residence: 'bg-purple-500/20 text-purple-300',
            territory: 'bg-pink-500/20 text-pink-300',
            other: 'bg-gray-500/20 text-gray-300',
        };

        const locationStatusColors = {
            active: 'bg-green-500/20 text-green-300',
