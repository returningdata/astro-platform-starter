---
import Layout from '../../layouts/Layout.astro';

export const prerender = false;
---

<Layout title="Intel Management - DPPD Admin" isAdmin={true}>
    <div class="space-y-8">
        <!-- Header -->
        <div class="flex items-center justify-between flex-wrap gap-4">
            <div>
                <h1 class="text-4xl md:text-5xl font-bold mb-2">Intel Management</h1>
                <p class="text-white/70">Manage gang/militia intel threads and user clearances</p>
            </div>
            <a href="/admin" class="px-4 py-2 bg-white/10 hover:bg-white/20 rounded-lg transition-colors">
                &larr; Back to Dashboard
            </a>
        </div>

        <!-- Tabs -->
        <div class="flex border-b border-white/20">
            <button id="threadsTab" class="tab-button px-6 py-3 font-semibold border-b-2 border-primary text-primary">
                Threads
            </button>
            <button id="usersTab" class="tab-button px-6 py-3 font-semibold border-b-2 border-transparent text-white/60 hover:text-white/80">
                Users & Clearances
            </button>
            <button id="logsTab" class="tab-button px-6 py-3 font-semibold border-b-2 border-transparent text-white/60 hover:text-white/80">
                Login Logs
            </button>
        </div>

        <!-- Threads Panel -->
        <div id="threadsPanel" class="space-y-6">
            <!-- Create Thread Button -->
            <div class="flex justify-end">
                <button id="createThreadBtn" class="px-4 py-2 bg-primary hover:bg-primary/80 rounded-lg transition-colors font-semibold">
                    + Create Thread
                </button>
            </div>

            <!-- Threads List -->
            <div id="threadsList" class="space-y-4">
                <div class="text-center py-12 text-white/60">
                    <p>Loading threads...</p>
                </div>
            </div>
        </div>

        <!-- Users Panel (hidden by default) -->
        <div id="usersPanel" class="hidden space-y-6">
            <div class="bg-slate-800/50 rounded-lg p-4 border border-slate-700">
                <p class="text-white/70 text-sm">
                    <strong>Clearance Levels:</strong><br>
                    <span class="text-yellow-400">Pending</span> - Awaiting approval (no access)<br>
                    <span class="text-green-400">Public Trust (PT)</span> - Basic intel access<br>
                    <span class="text-cyan-400">Confidential (C)</span> - Confidential intel access<br>
                    <span class="text-blue-400">Secret (S)</span> - Secret intel access<br>
                    <span class="text-orange-400">Top Secret (TS)</span> - Top secret intel access<br>
                    <span class="text-purple-400">Top Secret/SCI (TS/SCI)</span> - Sensitive compartmented information<br>
                    <span class="text-pink-400">Special Access (SA)</span> - Full special access<br>
                    <span class="text-red-400">Denied</span> - Access denied
                </p>
            </div>

            <div id="usersList" class="space-y-4">
                <div class="text-center py-12 text-white/60">
                    <p>Loading users...</p>
                </div>
            </div>
        </div>

        <!-- Logs Panel (hidden by default) -->
        <div id="logsPanel" class="hidden space-y-6">
            <div id="logsList" class="space-y-2">
                <div class="text-center py-12 text-white/60">
                    <p>Loading login logs...</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Thread Modal -->
    <div id="threadModal" class="hidden fixed inset-0 bg-black/70 flex items-center justify-center z-50">
        <div class="bg-slate-800 rounded-lg border border-slate-700 p-6 w-full max-w-lg mx-4">
            <h3 id="threadModalTitle" class="text-xl font-bold mb-4">Create Thread</h3>
            <form id="threadForm" class="space-y-4">
                <input type="hidden" id="threadId" />
                <div>
                    <label class="block text-sm font-medium text-white/70 mb-1">Title</label>
                    <input type="text" id="threadTitle" required
                        class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-white/70 mb-1">Description</label>
                    <textarea id="threadDescription" required rows="3"
                        class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary"></textarea>
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-white/70 mb-1">Category</label>
                        <select id="threadCategory" required
                            class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary">
                            <option value="gang">Gang</option>
                            <option value="cartel">Cartel</option>
                            <option value="militia">Militia</option>
                            <option value="crime_family">Crime Family</option>
                            <option value="motorcycle_club">Motorcycle Club</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-white/70 mb-1">Required Clearance</label>
                        <select id="threadClearance" required
                            class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary">
                            <option value="public_trust">Public Trust (PT)</option>
                            <option value="confidential">Confidential (C)</option>
                            <option value="secret">Secret (S)</option>
                            <option value="top_secret">Top Secret (TS)</option>
                            <option value="top_secret_sci">Top Secret/SCI</option>
                            <option value="special_access">Special Access (SA)</option>
                        </select>
                    </div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-white/70 mb-1">Organization Image URL</label>
                    <input type="text" id="threadImage" placeholder="https://..."
                        class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary" />
                    <p class="text-white/50 text-xs mt-1">Image displayed when users search for this organization</p>
                </div>
                <div id="threadOptions" class="hidden grid grid-cols-2 gap-4">
                    <label class="flex items-center gap-2">
                        <input type="checkbox" id="threadPinned" class="rounded bg-slate-700 border-slate-600" />
                        <span class="text-white/70">Pinned</span>
                    </label>
                    <label class="flex items-center gap-2">
                        <input type="checkbox" id="threadLocked" class="rounded bg-slate-700 border-slate-600" />
                        <span class="text-white/70">Locked</span>
                    </label>
                </div>
                <div class="flex justify-end gap-4 pt-4">
                    <button type="button" id="cancelThreadBtn" class="px-4 py-2 bg-slate-600 hover:bg-slate-500 rounded-lg transition-colors">
                        Cancel
                    </button>
                    <button type="submit" class="px-4 py-2 bg-primary hover:bg-primary/80 rounded-lg transition-colors font-semibold">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Thread Detail Modal -->
    <div id="threadDetailModal" class="hidden fixed inset-0 bg-black/70 flex items-center justify-center z-50 overflow-y-auto">
        <div class="bg-slate-800 rounded-lg border border-slate-700 p-6 w-full max-w-4xl mx-4 my-8">
            <div class="flex justify-between items-start mb-4">
                <div>
                    <h3 id="detailThreadTitle" class="text-xl font-bold"></h3>
                    <p id="detailThreadMeta" class="text-white/60 text-sm"></p>
                </div>
                <button id="closeDetailBtn" class="text-white/60 hover:text-white">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            <p id="detailThreadDescription" class="text-white/80 mb-4"></p>

            <!-- Sub-tabs for Posts, People, Locations, Vehicles -->
            <div class="flex border-b border-slate-700 mb-4">
                <button id="detailPostsTab" class="detail-tab px-4 py-2 font-semibold border-b-2 border-primary text-primary">
                    Posts
                </button>
                <button id="detailPeopleTab" class="detail-tab px-4 py-2 font-semibold border-b-2 border-transparent text-white/60 hover:text-white/80">
                    People
                </button>
                <button id="detailLocationsTab" class="detail-tab px-4 py-2 font-semibold border-b-2 border-transparent text-white/60 hover:text-white/80">
                    Locations
                </button>
                <button id="detailVehiclesTab" class="detail-tab px-4 py-2 font-semibold border-b-2 border-transparent text-white/60 hover:text-white/80">
                    Vehicles
                </button>
            </div>

            <!-- Posts Panel -->
            <div id="detailPostsPanel">
                <div id="postsList" class="space-y-4 mb-4 max-h-96 overflow-y-auto">
                    <!-- Posts will be loaded here -->
                </div>

                <!-- Add Post Form -->
                <div id="addPostForm" class="border-t border-slate-700 pt-4">
                    <h5 class="font-medium mb-2">Add New Post</h5>
                    <textarea id="newPostContent" rows="3" placeholder="Enter your intel post content..."
                        class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary mb-2"></textarea>
                    <div class="flex justify-end">
                        <button id="submitPostBtn" class="px-4 py-2 bg-primary hover:bg-primary/80 rounded-lg transition-colors text-sm font-semibold">
                            Post
                        </button>
                    </div>
                </div>
            </div>

            <!-- People Panel -->
            <div id="detailPeoplePanel" class="hidden">
                <div class="flex justify-end mb-4">
                    <button id="addPersonBtn" class="px-4 py-2 bg-green-600 hover:bg-green-500 rounded-lg transition-colors font-semibold text-sm">
                        + Add Person
                    </button>
                </div>
                <div id="peopleList" class="grid grid-cols-1 md:grid-cols-2 gap-4 max-h-96 overflow-y-auto">
                    <!-- People will be loaded here -->
                </div>
            </div>

            <!-- Locations Panel -->
            <div id="detailLocationsPanel" class="hidden">
                <div class="flex justify-end mb-4">
                    <button id="addLocationBtn" class="px-4 py-2 bg-blue-600 hover:bg-blue-500 rounded-lg transition-colors font-semibold text-sm">
                        + Add Location
                    </button>
                </div>
                <div id="locationsList" class="grid grid-cols-1 md:grid-cols-2 gap-4 max-h-96 overflow-y-auto">
                    <!-- Locations will be loaded here -->
                </div>
            </div>

            <!-- Vehicles Panel -->
            <div id="detailVehiclesPanel" class="hidden">
                <div class="flex justify-end mb-4">
                    <button id="addVehicleBtn" class="px-4 py-2 bg-purple-600 hover:bg-purple-500 rounded-lg transition-colors font-semibold text-sm">
                        + Add Vehicle
                    </button>
                </div>
                <div id="vehiclesList" class="grid grid-cols-1 md:grid-cols-2 gap-4 max-h-96 overflow-y-auto">
                    <!-- Vehicles will be loaded here -->
                </div>
            </div>
        </div>
    </div>

    <!-- Add Person Modal -->
    <div id="personModal" class="hidden fixed inset-0 bg-black/80 flex items-center justify-center z-[60]">
        <div class="bg-slate-800 rounded-lg border border-slate-700 p-6 w-full max-w-lg mx-4 max-h-[90vh] overflow-y-auto">
            <h3 id="personModalTitle" class="text-xl font-bold mb-4">Add Person</h3>
            <form id="personForm" class="space-y-4">
                <input type="hidden" id="personId" />
                <div>
                    <label class="block text-sm font-medium text-white/70 mb-1">Name *</label>
                    <input type="text" id="personName" required
                        class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-white/70 mb-1">Aliases (comma-separated)</label>
                    <input type="text" id="personAliases" placeholder="e.g., Big Mike, Mikey D"
                        class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-white/70 mb-1">Photo URL (optional)</label>
                    <input type="text" id="personPhoto" placeholder="https://..."
                        class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary" />
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-white/70 mb-1">Role</label>
                        <input type="text" id="personRole" placeholder="e.g., Leader, Lieutenant"
                            class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-white/70 mb-1">Status</label>
                        <select id="personStatus"
                            class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary">
                            <option value="unknown">Unknown</option>
                            <option value="active">Active</option>
                            <option value="inactive">Inactive</option>
                            <option value="incarcerated">Incarcerated</option>
                            <option value="deceased">Deceased</option>
                        </select>
                    </div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-white/70 mb-1">Last Known Location</label>
                    <input type="text" id="personLocation"
                        class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-white/70 mb-1">Description</label>
                    <textarea id="personDescription" rows="2"
                        class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary"></textarea>
                </div>
                <div>
                    <label class="block text-sm font-medium text-white/70 mb-1">Notes</label>
                    <textarea id="personNotes" rows="2"
                        class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary"></textarea>
                </div>
                <div class="flex justify-end gap-4 pt-4">
                    <button type="button" id="cancelPersonBtn" class="px-4 py-2 bg-slate-600 hover:bg-slate-500 rounded-lg transition-colors">
                        Cancel
                    </button>
                    <button type="submit" class="px-4 py-2 bg-primary hover:bg-primary/80 rounded-lg transition-colors font-semibold">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Add Location Modal -->
    <div id="locationModal" class="hidden fixed inset-0 bg-black/80 flex items-center justify-center z-[60]">
        <div class="bg-slate-800 rounded-lg border border-slate-700 p-6 w-full max-w-lg mx-4 max-h-[90vh] overflow-y-auto">
            <h3 id="locationModalTitle" class="text-xl font-bold mb-4">Add Location</h3>
            <form id="locationForm" class="space-y-4">
                <input type="hidden" id="locationId" />
                <div>
                    <label class="block text-sm font-medium text-white/70 mb-1">Name *</label>
                    <input type="text" id="locationName" required
                        class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary" />
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-white/70 mb-1">Type</label>
                        <select id="locationType"
                            class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary">
                            <option value="other">Other</option>
                            <option value="headquarters">Headquarters</option>
                            <option value="safehouse">Safehouse</option>
                            <option value="meetup">Meetup Point</option>
                            <option value="stash">Stash House</option>
                            <option value="business">Business Front</option>
                            <option value="residence">Residence</option>
                            <option value="territory">Territory</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-white/70 mb-1">Status</label>
                        <select id="locationStatus"
                            class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary">
                            <option value="unknown">Unknown</option>
                            <option value="active">Active</option>
                            <option value="inactive">Inactive</option>
                            <option value="under_surveillance">Under Surveillance</option>
                            <option value="raided">Raided</option>
                        </select>
                    </div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-white/70 mb-1">Address</label>
                    <input type="text" id="locationAddress"
                        class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-white/70 mb-1">Photo URL (optional)</label>
                    <input type="text" id="locationPhoto" placeholder="https://..."
                        class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-white/70 mb-1">Description</label>
                    <textarea id="locationDescription" rows="2"
                        class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary"></textarea>
                </div>
                <div>
                    <label class="block text-sm font-medium text-white/70 mb-1">Notes</label>
                    <textarea id="locationNotes" rows="2"
                        class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary"></textarea>
                </div>
                <div class="flex justify-end gap-4 pt-4">
                    <button type="button" id="cancelLocationBtn" class="px-4 py-2 bg-slate-600 hover:bg-slate-500 rounded-lg transition-colors">
                        Cancel
                    </button>
                    <button type="submit" class="px-4 py-2 bg-primary hover:bg-primary/80 rounded-lg transition-colors font-semibold">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Add Vehicle Modal -->
    <div id="vehicleModal" class="hidden fixed inset-0 bg-black/80 flex items-center justify-center z-[60]">
        <div class="bg-slate-800 rounded-lg border border-slate-700 p-6 w-full max-w-lg mx-4 max-h-[90vh] overflow-y-auto">
            <h3 id="vehicleModalTitle" class="text-xl font-bold mb-4">Add Vehicle</h3>
            <form id="vehicleForm" class="space-y-4">
                <input type="hidden" id="vehicleId" />
                <div class="grid grid-cols-3 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-white/70 mb-1">Make</label>
                        <input type="text" id="vehicleMake" placeholder="e.g., Ford"
                            class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-white/70 mb-1">Model</label>
                        <input type="text" id="vehicleModel" placeholder="e.g., Mustang"
                            class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-white/70 mb-1">Year</label>
                        <input type="text" id="vehicleYear" placeholder="e.g., 2023"
                            class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary" />
                    </div>
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-white/70 mb-1">Color</label>
                        <input type="text" id="vehicleColor" placeholder="e.g., Black"
                            class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-white/70 mb-1">License Plate</label>
                        <input type="text" id="vehiclePlate" placeholder="e.g., ABC 123"
                            class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary" />
                    </div>
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-white/70 mb-1">Type</label>
                        <select id="vehicleType"
                            class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary">
                            <option value="car">Car</option>
                            <option value="truck">Truck</option>
                            <option value="suv">SUV</option>
                            <option value="van">Van</option>
                            <option value="motorcycle">Motorcycle</option>
                            <option value="boat">Boat</option>
                            <option value="aircraft">Aircraft</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-white/70 mb-1">Status</label>
                        <select id="vehicleStatus"
                            class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary">
                            <option value="unknown">Unknown</option>
                            <option value="active">Active</option>
                            <option value="impounded">Impounded</option>
                            <option value="stolen">Stolen</option>
                            <option value="destroyed">Destroyed</option>
                        </select>
                    </div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-white/70 mb-1">VIN</label>
                    <input type="text" id="vehicleVin" placeholder="Vehicle Identification Number"
                        class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary" />
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-white/70 mb-1">Registered Owner</label>
                        <input type="text" id="vehicleOwner"
                            class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-white/70 mb-1">Associated Person</label>
                        <input type="text" id="vehicleAssociatedPerson"
                            class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary" />
                    </div>
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-white/70 mb-1">Last Seen Location</label>
                        <input type="text" id="vehicleLastLocation"
                            class="w-full px-4 py-2 bg-slate-700/50 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-white/70 mb-1">Last Seen Date</label>
                        <input type="date" id="vehicleLastDate"
